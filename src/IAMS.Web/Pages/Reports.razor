    private RenderFragment BuildTablePreview<T>(List<T> data, string[] headers, Func<T, object[]> rowMapper) => @<div>
        <div class="mb-4 text-sm text-slate-500 dark:text-slate-400">@data.Count rows</div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead>
                    <tr class="border-b border-slate-200 dark:border-slate-700">
                        @foreach (var h in headers)
                        {
                            <th class="text-left py-2 px-3 font-medium text-slate-700 dark:text-slate-300">@h</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in data.Take(50))
                    {
                        var cells = rowMapper(row);
                        <tr class="border-b border-slate-100 dark:border-slate-700/50">
                            @foreach (var cell in cells)
                            {
                                <td class="py-2 px-3 text-slate-600 dark:text-slate-400">@cell</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            @if (data.Count > 50)
            {
                <div class="mt-4 text-center text-sm text-slate-500">Showing first 50 of @data.Count rows</div>
            }
        </div>
    </div>;

    private void ClosePreview()
    {
        _showPreview = false;
        _previewContent = null;
    }

    private async Task DownloadReport(string reportType, Dictionary<string, string>? filters)
    {
        var url = Api.GetReportExportUrl(reportType, filters);
        var token = await AuthService.GetTokenAsync();
        var baseUrl = Configuration["ApiBaseUrl"] ?? "https://localhost:5021";
        await JS.InvokeVoidAsync("downloadWithAuth", $"{baseUrl}/{url}", token);
    }

    private static string FormatCurrency(decimal? value, string? currency)
    {
        if (!value.HasValue) return "—";
        var symbol = currency switch { "USD" => "$", "EUR" => "€", "GBP" => "£", "PHP" => "₱", _ => currency + " " };
        return $"{symbol}{value:N2}";
    }
