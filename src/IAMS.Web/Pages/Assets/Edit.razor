@page "/assets/new"
@page "/assets/{Id:int}/edit"
@attribute [Authorize(Roles = "Admin,Staff")]
@implements IDisposable
@inject ApiClient Api
@inject NavigationManager Navigation
@inject AppleDeviceLookupService AppleLookup
@inject IJSRuntime JS
@inject SnackbarService Snackbar

<PageTitle>@(IsNew ? "Add Asset" : "Edit Asset") - IAMS</PageTitle>

<div class="max-w-3xl mx-auto space-y-4 sm:space-y-6">
    <!-- Header -->
    <div class="flex items-center gap-3 sm:gap-4">
        <a href="@(IsNew ? "/assets" : $"/assets/{Id}")" class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-100 dark:hover:text-slate-300 dark:hover:bg-slate-700 transition-all duration-200">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
        </a>
        <h1 class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white">@(IsNew ? "Add Asset" : "Edit Asset")</h1>
    </div>

    @if (_loading)
    {
        <Card>
            <div class="space-y-4">
                @for (int i = 0; i < 8; i++)
                {
                    <div class="h-12 rounded-xl skeleton"></div>
                }
            </div>
        </Card>
    }
    else
    {
        <EditForm id="asset-form" Model="@_model" OnValidSubmit="HandleSubmit">
            <!-- Device Information -->
            <Card Title="Device Information">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                    <div class="sm:col-span-2">
                        <Select Label="Device Type *" @bind-Value="_model.DeviceType" Placeholder="Select device type">
                            @if (_deviceTypes is not null)
                            {
                                @foreach (var dt in _deviceTypes)
                                {
                                    <option value="@dt">@dt</option>
                                }
                            }
                        </Select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Serial Number</label>
                        <div class="relative">
                            <input type="text"
                                   @bind="_model.SerialNumber"
                                   @bind:event="oninput"
                                   @bind:after="OnSerialNumberChangedAsync"
                                   placeholder="C02X1234ABCD"
                                   class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm @(_appleDeviceInfo is not null ? "pr-10" : "")" />
                            @if (_appleDeviceInfo is not null)
                            {
                                <div class="absolute right-3 top-1/2 -translate-y-1/2">
                                    <svg class="w-5 h-5 text-slate-400" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                                    </svg>
                                </div>
                            }
                        </div>
                    </div>
                    <Input Label="Manufacturer" @bind-Value="_model.Manufacturer" Placeholder="Apple, Dell, HP..." />
                    <Input Label="Model" @bind-Value="_model.Model" Placeholder="MacBook Pro 16&quot;, XPS 15..." />
                    <Input Label="Model Year" Type="number" @bind-Value="_model.ModelYear" Placeholder="2024" />
                    <Input Label="Location" @bind-Value="_model.Location" Placeholder="Office - Floor 2" />
                    <Input Label="Name (Optional)" @bind-Value="_model.Name" Placeholder="Custom display name" />
                </div>
            </Card>

            <!-- Apple Auto-fill Suggestion -->
            @if (_appleDeviceInfo is not null && _showAutoFillSuggestion)
            {
                <div class="bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-800 dark:to-slate-700 rounded-2xl border border-slate-200 dark:border-slate-600 p-4 animate-slide-up">
                    <div class="flex items-start gap-3">
                        <div class="w-10 h-10 rounded-xl bg-white dark:bg-slate-600 flex items-center justify-center shadow-sm shrink-0">
                            <svg class="w-6 h-6 text-slate-600 dark:text-slate-300" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                            </svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center gap-2 mb-1">
                                <h4 class="text-sm font-semibold text-slate-900 dark:text-white">Apple Device Detected</h4>
                                @if (_appleDeviceInfo.IsPartialMatch)
                                {
                                    <span class="px-1.5 py-0.5 text-[10px] font-medium bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400 rounded">Partial</span>
                                }
                            </div>
                            <div class="text-sm text-slate-600 dark:text-slate-300 space-y-0.5">
                                @if (_appleDeviceInfo.Model is not null)
                                {
                                    <p><span class="text-slate-400">Model:</span> @_appleDeviceInfo.Model</p>
                                }
                                @if (_appleDeviceInfo.Year.HasValue)
                                {
                                    <p><span class="text-slate-400">Year:</span> @_appleDeviceInfo.Year</p>
                                }
                                @if (_appleDeviceInfo.DeviceType is not null)
                                {
                                    <p><span class="text-slate-400">Type:</span> @_appleDeviceInfo.DeviceType</p>
                                }
                            </div>
                            <div class="flex items-center gap-2 mt-3">
                                <button type="button" @onclick="ApplyAutoFill" class="px-3 py-1.5 text-sm font-medium bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                                    Apply
                                </button>
                                <button type="button" @onclick="DismissAutoFill" class="px-3 py-1.5 text-sm font-medium text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 transition-colors">
                                    Dismiss
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Status & Assignment -->
            <Card Title="Status & Assignment">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                    <Select Label="Status *" @bind-Value="_model.Status" Placeholder="Select status">
                        @if (_statuses is not null)
                        {
                            @foreach (var stat in _statuses)
                            {
                                <option value="@stat">@stat</option>
                            }
                        }
                    </Select>
                    <Select Label="Assigned To" @bind-Value="_model.AssignedToUserId" Placeholder="Unassigned">
                        @if (_users is not null)
                        {
                            @foreach (var user in _users)
                            {
                                <option value="@user.Id">@user.FullName @(user.Department is not null ? $"({user.Department})" : "")</option>
                            }
                        }
                    </Select>
                </div>
            </Card>

            <!-- Purchase Information -->
            <Card Title="Purchase Information">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                    <Input Label="Purchase Price" Type="number" @bind-Value="_model.PurchasePrice" Placeholder="2499.00" />
                    <Select Label="Currency" @bind-Value="_model.Currency" Placeholder="Select currency">
                        @if (_currencies is not null)
                        {
                            @foreach (var cur in _currencies)
                            {
                                <option value="@cur">@cur</option>
                            }
                        }
                    </Select>
                    <Input Label="Purchase Date" Type="date" @bind-Value="_model.PurchaseDate" />
                </div>
            </Card>

            <!-- Warranty Information -->
            <Card Title="Warranty Information">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                    <div class="sm:col-span-2">
                        <Input Label="Warranty Provider" @bind-Value="_model.WarrantyProvider" Placeholder="Apple Care+, Dell ProSupport..." />
                    </div>
                    <Input Label="Warranty Start Date" Type="date" @bind-Value="_model.WarrantyStartDate" />
                    <Input Label="Warranty End Date" Type="date" @bind-Value="_model.WarrantyEndDate" />
                </div>
            </Card>

            <!-- Notes -->
            <Card Title="Additional Notes">
                <div>
                    <textarea @bind="_model.Notes"
                              rows="4"
                              placeholder="Additional notes about this asset..."
                              class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 resize-none text-sm"></textarea>
                </div>
            </Card>
        </EditForm>

        <!-- Attachments Section (only for existing assets) -->
        @if (!IsNew)
        {
            <Card Title="Attachments">
                <HeaderContent>
                    <button type="button" @onclick="ShowUploadModal" class="text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400 font-medium transition-colors">
                        Add File
                    </button>
                </HeaderContent>
                <ChildContent>
                    @if (_attachmentsLoading)
                    {
                        <div class="space-y-3">
                            @for (int i = 0; i < 2; i++)
                            {
                                <div class="flex items-center gap-3 p-3">
                                    <div class="w-12 h-12 rounded-lg skeleton"></div>
                                    <div class="flex-1 space-y-1">
                                        <div class="h-3 w-1/2 rounded skeleton"></div>
                                        <div class="h-2 w-1/3 rounded skeleton"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else if (_attachments is null || _attachments.Count == 0)
                    {
                        <EmptyState Title="No attachments" Description="Upload receipts, photos, or documents for this asset.">
                            <button type="button" @onclick="ShowUploadModal" class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-all duration-200 text-sm">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                                Upload File
                            </button>
                        </EmptyState>
                    }
                    else
                    {
                        <div class="divide-y divide-slate-100 dark:divide-slate-700 -mx-6 -my-6">
                            @foreach (var attachment in _attachments)
                            {
                                <div class="flex items-center gap-3 px-6 py-4 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                                    <!-- Thumbnail/Icon -->
                                    @if (attachment.IsImage && _attachmentThumbnails.TryGetValue(attachment.Id, out var thumbnailUrl))
                                    {
                                        <img src="@thumbnailUrl"
                                             alt="@attachment.FileName"
                                             class="w-12 h-12 object-cover rounded-lg" />
                                    }
                                    else if (attachment.IsImage)
                                    {
                                        <div class="w-12 h-12 rounded-lg bg-slate-100 dark:bg-slate-700 flex items-center justify-center">
                                            <div class="w-5 h-5 border-2 border-primary-500 border-t-transparent rounded-full animate-spin"></div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="w-12 h-12 rounded-lg bg-slate-100 dark:bg-slate-700 flex items-center justify-center">
                                            <svg class="w-6 h-6 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                                            </svg>
                                        </div>
                                    }

                                    <!-- Info -->
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-slate-900 dark:text-white truncate">@attachment.FileName</p>
                                        <p class="text-xs text-slate-500 dark:text-slate-400">
                                            @attachment.Category &bull; @attachment.FileSizeDisplay &bull; @attachment.CreatedAt.ToString("MMM dd, yyyy")
                                        </p>
                                    </div>

                                    <!-- Actions -->
                                    <div class="flex items-center gap-1">
                                        <button type="button" @onclick="() => DownloadAttachment(attachment)"
                                                class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-100 dark:hover:text-slate-300 dark:hover:bg-slate-700 transition-all">
                                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                            </svg>
                                        </button>
                                        <button type="button" @onclick="() => ConfirmDeleteAttachment(attachment)"
                                                class="p-2 rounded-lg text-red-400 hover:text-red-600 hover:bg-red-50 dark:hover:text-red-300 dark:hover:bg-red-900/20 transition-all">
                                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </ChildContent>
            </Card>

            <!-- Upload Modal -->
            <Modal IsOpen="@_showUploadModal" Title="Upload Attachment" OnClose="HideUploadModal">
                <ChildContent>
                    <div class="space-y-4">
                        <FileUpload Label="File"
                                    OnFileChanged="OnUploadFileSelected"
                                    EnableCameraCapture="true"
                                    Error="@_uploadFileError" />

                        <Select Label="Category *" @bind-Value="_uploadCategory" Placeholder="Select category">
                            @if (_categories is not null)
                            {
                                @foreach (var cat in _categories)
                                {
                                    <option value="@cat">@cat</option>
                                }
                            }
                        </Select>

                        <div>
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Description (Optional)</label>
                            <textarea @bind="_uploadDescription"
                                      rows="2"
                                      placeholder="Brief description of this file..."
                                      class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 resize-none text-sm"></textarea>
                        </div>

                        @if (!string.IsNullOrEmpty(_uploadError))
                        {
                            <p class="text-sm text-red-600 dark:text-red-400">@_uploadError</p>
                        }
                    </div>
                </ChildContent>
                <FooterContent>
                    <Button Variant="ghost" OnClick="HideUploadModal">Cancel</Button>
                    <Button OnClick="UploadFile" Loading="@_uploading" Disabled="@(_uploadFile is null || string.IsNullOrEmpty(_uploadCategory))">Upload</Button>
                </FooterContent>
            </Modal>

            <!-- Delete Attachment Confirmation Modal -->
            <Modal IsOpen="@_showDeleteAttachmentModal" Title="Delete Attachment" OnClose="() => _showDeleteAttachmentModal = false" Size="sm">
                <ChildContent>
                    <p class="text-slate-600 dark:text-slate-300">
                        Are you sure you want to delete <strong>@_attachmentToDelete?.FileName</strong>? This action cannot be undone.
                    </p>
                </ChildContent>
                <FooterContent>
                    <Button Variant="ghost" OnClick="() => _showDeleteAttachmentModal = false">Cancel</Button>
                    <Button Variant="danger" OnClick="DeleteAttachment" Loading="@_deletingAttachment">Delete</Button>
                </FooterContent>
            </Modal>
        }

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(_error))
        {
            <div class="p-4 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 animate-slide-up">
                <p class="text-sm text-red-600 dark:text-red-400">@_error</p>
            </div>
        }

        <!-- Action Buttons -->
        <div class="flex flex-col-reverse sm:flex-row items-center justify-end gap-3 pt-2">
            <a href="@(IsNew ? "/assets" : $"/assets/{Id}")" class="w-full sm:w-auto px-6 py-2.5 rounded-xl font-medium text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700 transition-all duration-200 text-center">
                Cancel
            </a>
            <Button Type="submit" form="asset-form" Loading="@_saving" class="w-full sm:w-auto">
                @(IsNew ? "Create Asset" : "Save Changes")
            </Button>
        </div>
    }
</div>

@code {
    [Parameter] public int? Id { get; set; }

    private bool IsNew => Id is null;
    private bool _loading = true;
    private bool _saving;
    private string? _error;
    private AssetModel _model = new();
    private string[]? _deviceTypes;
    private string[]? _statuses;
    private string[]? _currencies;
    private List<UserListItem>? _users;

    // Apple auto-fill state
    private AppleDeviceInfo? _appleDeviceInfo;
    private bool _showAutoFillSuggestion;
    private string? _lastCheckedSerial;
    private System.Timers.Timer? _debounceTimer;

    // Attachment state
    private List<AttachmentDto>? _attachments;
    private bool _attachmentsLoading;
    private string[]? _categories;
    private Dictionary<int, string> _attachmentThumbnails = new();

    // Upload modal state
    private bool _showUploadModal;
    private bool _uploading;
    private IBrowserFile? _uploadFile;
    private string _uploadCategory = "";
    private string _uploadDescription = "";
    private string _uploadError = "";
    private string _uploadFileError = "";

    // Delete modal state
    private bool _showDeleteAttachmentModal;
    private bool _deletingAttachment;
    private AttachmentDto? _attachmentToDelete;

    protected override async Task OnInitializedAsync()
    {
        _deviceTypes = await Api.GetDeviceTypesAsync();
        _statuses = await Api.GetStatusesAsync();
        _currencies = await Api.GetCurrenciesAsync();
        _users = await Api.GetUserListAsync();

        if (!IsNew)
        {
            var asset = await Api.GetAssetAsync(Id!.Value);
            if (asset is not null)
            {
                _model = new AssetModel
                {
                    DeviceType = asset.DeviceType,
                    Manufacturer = asset.Manufacturer ?? "",
                    Model = asset.Model ?? "",
                    ModelYear = asset.ModelYear?.ToString() ?? "",
                    SerialNumber = asset.SerialNumber ?? "",
                    Name = asset.Name ?? "",
                    Location = asset.Location ?? "",
                    Status = asset.Status,
                    AssignedToUserId = asset.AssignedToUserId ?? "",
                    PurchasePrice = asset.PurchasePrice?.ToString() ?? "",
                    Currency = asset.Currency,
                    PurchaseDate = asset.PurchaseDate?.ToString("yyyy-MM-dd") ?? "",
                    WarrantyProvider = asset.WarrantyProvider ?? "",
                    WarrantyStartDate = asset.WarrantyStartDate?.ToString("yyyy-MM-dd") ?? "",
                    WarrantyEndDate = asset.WarrantyEndDate?.ToString("yyyy-MM-dd") ?? "",
                    Notes = asset.Notes ?? ""
                };
            }
        }
        else
        {
            _model.Currency = "USD";
            _model.Status = "Available";
        }

        _loading = false;

        // Load attachments for edit mode
        if (!IsNew)
        {
            _ = LoadAttachments();
        }
    }

    private async Task LoadAttachments()
    {
        _attachmentsLoading = true;
        _categories ??= await Api.GetAttachmentCategoriesAsync();
        _attachments = await Api.GetAttachmentsAsync(Id!.Value);
        _attachmentsLoading = false;
        StateHasChanged();

        // Load thumbnails for images in background
        if (_attachments is not null)
        {
            foreach (var attachment in _attachments.Where(a => a.IsImage))
            {
                _ = LoadAttachmentThumbnail(attachment);
            }
        }
    }

    private async Task LoadAttachmentThumbnail(AttachmentDto attachment)
    {
        var dataUrl = await Api.GetAttachmentBase64Async(Id!.Value, attachment.Id, attachment.ContentType);
        if (dataUrl is not null)
        {
            _attachmentThumbnails[attachment.Id] = dataUrl;
            StateHasChanged();
        }
    }

    private async Task DownloadAttachment(AttachmentDto attachment)
    {
        // Use cached version if available, otherwise fetch
        if (!_attachmentThumbnails.TryGetValue(attachment.Id, out var dataUrl))
        {
            dataUrl = await Api.GetAttachmentBase64Async(Id!.Value, attachment.Id, attachment.ContentType);
        }

        if (dataUrl is not null)
        {
            await JS.InvokeVoidAsync("downloadFile", dataUrl, attachment.FileName);
        }
    }

    private void ShowUploadModal()
    {
        _uploadFile = null;
        _uploadCategory = "";
        _uploadDescription = "";
        _uploadError = "";
        _uploadFileError = "";
        _showUploadModal = true;
    }

    private void HideUploadModal() => _showUploadModal = false;

    private void OnUploadFileSelected(IBrowserFile? file)
    {
        _uploadFile = file;
        _uploadFileError = "";

        if (file is not null && file.Size > 5 * 1024 * 1024)
        {
            _uploadFileError = "File size exceeds 5 MB limit";
            _uploadFile = null;
        }
    }

    private async Task UploadFile()
    {
        if (_uploadFile is null || string.IsNullOrEmpty(_uploadCategory))
            return;

        _uploading = true;
        _uploadError = "";

        try
        {
            await using var stream = _uploadFile.OpenReadStream(5 * 1024 * 1024);
            var (success, _, error) = await Api.UploadAttachmentAsync(
                Id!.Value,
                stream,
                _uploadFile.Name,
                _uploadFile.ContentType,
                _uploadCategory,
                string.IsNullOrWhiteSpace(_uploadDescription) ? null : _uploadDescription);

            if (success)
            {
                _showUploadModal = false;
                Snackbar.Success("File uploaded successfully");
                await LoadAttachments();
            }
            else
            {
                _uploadError = error ?? "Failed to upload file";
                Snackbar.Error(_uploadError);
            }
        }
        catch (Exception ex)
        {
            _uploadError = ex.Message;
            Snackbar.Error(_uploadError);
        }

        _uploading = false;
    }

    private void ConfirmDeleteAttachment(AttachmentDto attachment)
    {
        _attachmentToDelete = attachment;
        _showDeleteAttachmentModal = true;
    }

    private async Task DeleteAttachment()
    {
        if (_attachmentToDelete is null)
            return;

        _deletingAttachment = true;

        var success = await Api.DeleteAttachmentAsync(Id!.Value, _attachmentToDelete.Id);

        if (success)
        {
            _showDeleteAttachmentModal = false;
            Snackbar.Success("Attachment deleted");
            await LoadAttachments();
        }
        else
        {
            Snackbar.Error("Failed to delete attachment");
        }

        _deletingAttachment = false;
    }

    private async Task HandleSubmit()
    {
        _error = null;
        _saving = true;

        if (string.IsNullOrWhiteSpace(_model.DeviceType) || string.IsNullOrWhiteSpace(_model.Status))
        {
            _error = "Please fill in all required fields (Device Type and Status).";
            _saving = false;
            return;
        }

        bool success;
        string? error;

        if (IsNew)
        {
