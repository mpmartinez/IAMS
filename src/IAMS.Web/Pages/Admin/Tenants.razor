    private async Task CreateTenant()
    {
        _modalError = null;

        if (string.IsNullOrWhiteSpace(_createModel.Name) ||
            string.IsNullOrWhiteSpace(_createModel.Slug) ||
            string.IsNullOrWhiteSpace(_createModel.AdminEmail) ||
            string.IsNullOrWhiteSpace(_createModel.AdminPassword) ||
            string.IsNullOrWhiteSpace(_createModel.AdminFullName))
        {
            _modalError = "Please fill in all required fields.";
            return;
        }

        _saving = true;

        var dto = new CreateTenantDto
        {
            Name = _createModel.Name,
            Slug = _createModel.Slug,
            SubscriptionTier = _createModel.SubscriptionTier,
            AdminEmail = _createModel.AdminEmail,
            AdminPassword = _createModel.AdminPassword,
            AdminFullName = _createModel.AdminFullName
        };

        var (success, _, error) = await Api.CreateTenantAsync(dto);
        _saving = false;

        if (success)
        {
            Snackbar.Success("Tenant created successfully");
            CloseCreateModal();
            await LoadTenants();
        }
        else
        {
            _modalError = error;
        }
    }

