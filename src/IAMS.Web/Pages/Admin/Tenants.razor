@page "/admin/tenants"
@attribute [Authorize(Roles = "SuperAdmin")]
@inject ApiClient Api
@inject NavigationManager Navigation
@inject SnackbarService Snackbar

<PageTitle>Tenants - IAMS</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Tenants</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Manage organizations and subscriptions</p>
        </div>
        <button @onclick="OpenCreateModal" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-all duration-200 shadow-lg shadow-primary-500/25 btn-press">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Tenant
        </button>
    </div>

    <!-- Filters -->
    <div class="flex flex-col sm:flex-row gap-4">
        <div class="relative flex-1 max-w-md">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" @bind="_search" @bind:event="oninput" @bind:after="SearchTenants" placeholder="Search by name or slug..."
                   class="w-full pl-10 pr-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
        </div>
        <select @bind="_statusFilter" @bind:after="LoadTenants" class="px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm">
            <option value="">All Status</option>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
        </select>
    </div>

    <!-- Tenants Table -->
    <Card>
        @if (_loading)
        {
            <div class="space-y-4">
                @for (int i = 0; i < 5; i++)
                {
                    <div class="h-20 rounded-xl skeleton"></div>
                }
            </div>
        }
        else if (_tenants is null || _tenants.Items.Count == 0)
        {
            <EmptyState Title="No tenants found" Description="@(string.IsNullOrEmpty(_search) ? "Create your first tenant to get started." : "Try adjusting your search.")" />
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-slate-200 dark:border-slate-700">
                            <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Organization</th>
                            <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Tier</th>
                            <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Usage</th>
                            <th class="text-left py-3 px-4 text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
                            <th class="text-right py-3 px-4 text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 dark:divide-slate-700/50">
                        @foreach (var tenant in _tenants.Items)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/30 transition-colors">
                                <td class="py-4 px-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center text-white font-semibold text-sm">
                                            @GetInitials(tenant.Name)
                                        </div>
                                        <div>
                                            <div class="font-medium text-slate-900 dark:text-white">@tenant.Name</div>
                                            <div class="text-sm text-slate-500 dark:text-slate-400">@tenant.Slug</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-4 px-4">
                                    <span class="@GetTierBadgeClasses(tenant.SubscriptionTier)">@tenant.SubscriptionTier</span>
                                </td>
                                <td class="py-4 px-4">
                                    <div class="space-y-2 min-w-[200px]">
                                        <UsageBar Label="Assets" Current="@tenant.CurrentAssetCount" Max="@tenant.MaxAssets" />
                                        <UsageBar Label="Users" Current="@tenant.CurrentUserCount" Max="@tenant.MaxUsers" />
                                        <UsageBar Label="Storage" Current="@tenant.CurrentStorageBytes" Max="@tenant.MaxStorageBytes" IsBytes="true" />
                                    </div>
                                </td>
                                <td class="py-4 px-4">
                                    @if (tenant.IsActive)
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg text-xs font-medium bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400">
                                            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span>
                                            Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center gap-1 px-2 py-1 rounded-lg text-xs font-medium bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400">
                                            <span class="w-1.5 h-1.5 rounded-full bg-slate-400"></span>
                                            Inactive
                                        </span>
                                    }
                                </td>
                                <td class="py-4 px-4">
                                    <div class="flex items-center justify-end gap-2">
                                        <button @onclick="() => OpenEditModal(tenant)" class="p-2 text-slate-400 hover:text-primary-600 hover:bg-primary-50 dark:hover:bg-primary-900/20 rounded-lg transition-colors" title="Edit">
                                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </button>
                                        @if (tenant.IsActive)
                                        {
                                            <button @onclick="() => OpenDeactivateModal(tenant)" class="p-2 text-slate-400 hover:text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors" title="Deactivate">
                                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                                                </svg>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (_tenants.TotalCount > _tenants.PageSize)
            {
                <div class="flex items-center justify-between pt-4 border-t border-slate-200 dark:border-slate-700 mt-4">
                    <div class="text-sm text-slate-500 dark:text-slate-400">
                        Showing @((_tenants.Page - 1) * _tenants.PageSize + 1) to @Math.Min(_tenants.Page * _tenants.PageSize, _tenants.TotalCount) of @_tenants.TotalCount
                    </div>
                    <div class="flex gap-2">
                        <button @onclick="PreviousPage" disabled="@(_tenants.Page <= 1)" class="px-3 py-1.5 text-sm rounded-lg border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                            Previous
                        </button>
                        <button @onclick="NextPage" disabled="@(_tenants.Page * _tenants.PageSize >= _tenants.TotalCount)" class="px-3 py-1.5 text-sm rounded-lg border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 disabled:opacity-50 disabled:cursor-not-allowed transition-colors">
                            Next
                        </button>
                    </div>
                </div>
            }
        }
    </Card>
</div>

<!-- Create Tenant Modal -->
@if (_showCreateModal)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
        <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" @onclick="CloseCreateModal"></div>
        <div class="relative w-full max-w-lg bg-white dark:bg-slate-800 rounded-2xl shadow-xl animate-scale-in max-h-[90vh] overflow-y-auto">
            <div class="flex items-center justify-between px-6 py-4 border-b border-slate-200 dark:border-slate-700 sticky top-0 bg-white dark:bg-slate-800">
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Create Tenant</h3>
                <button @onclick="CloseCreateModal" class="p-2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 transition-colors">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="p-6 space-y-4">
                <p class="text-sm text-slate-500 dark:text-slate-400 -mt-2 mb-4">Create a new organization with an admin user.</p>

                <div class="grid grid-cols-2 gap-4">
                    <div class="col-span-2">
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Organization Name *</label>
                        <input type="text" @bind="_createModel.Name" @bind:event="oninput" @bind:after="GenerateSlug" placeholder="Acme Corporation" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                    </div>
                    <div class="col-span-2">
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Slug *</label>
                        <input type="text" @bind="_createModel.Slug" placeholder="acme-corp" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                        <p class="mt-1 text-xs text-slate-500">URL-friendly identifier (lowercase, no spaces)</p>
                    </div>
                    <div class="col-span-2">
                        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Subscription Tier *</label>
                        <select @bind="_createModel.SubscriptionTier" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm">
                            @if (_subscriptionTiers is not null)
                            {
                                @foreach (var tier in _subscriptionTiers)
                                {
                                    <option value="@tier.Name">@tier.Name (@tier.MaxAssets assets, @tier.MaxUsers users, @tier.MaxStorageDisplay)</option>
                                }
                            }
                            else
                            {
                                <option value="Free">Free</option>
                                <option value="Pro">Pro</option>
                                <option value="Enterprise">Enterprise</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="border-t border-slate-200 dark:border-slate-700 pt-4 mt-4">
                    <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mb-3">Admin User</p>
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Full Name *</label>
                            <input type="text" @bind="_createModel.AdminFullName" placeholder="John Doe" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Email *</label>
                            <input type="email" @bind="_createModel.AdminEmail" placeholder="admin@example.com" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Password *</label>
                            <input type="password" @bind="_createModel.AdminPassword" placeholder="Min. 8 characters" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                            <p class="mt-1 text-xs text-slate-500">Requires uppercase, lowercase, number, and special character</p>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(_modalError))
                {
                    <div class="p-3 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800">
                        <p class="text-sm text-red-600 dark:text-red-400">@_modalError</p>
                    </div>
                }
            </div>
            <div class="flex justify-end gap-3 px-6 py-4 border-t border-slate-200 dark:border-slate-700 sticky bottom-0 bg-white dark:bg-slate-800">
                <button @onclick="CloseCreateModal" class="px-4 py-2 text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-xl transition-colors">
                    Cancel
                </button>
                <Button OnClick="CreateTenant" Loading="@_saving">
                    Create Tenant
                </Button>
            </div>
        </div>
    </div>
}

<!-- Edit Tenant Modal -->
@if (_showEditModal && _editingTenant is not null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
        <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" @onclick="CloseEditModal"></div>
        <div class="relative w-full max-w-lg bg-white dark:bg-slate-800 rounded-2xl shadow-xl animate-scale-in max-h-[90vh] overflow-y-auto">
            <div class="flex items-center justify-between px-6 py-4 border-b border-slate-200 dark:border-slate-700 sticky top-0 bg-white dark:bg-slate-800">
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white">Edit Tenant</h3>
                <button @onclick="CloseEditModal" class="p-2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 transition-colors">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Organization Name</label>
                    <input type="text" @bind="_editModel.Name" placeholder="Organization Name" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Slug</label>
                    <input type="text" value="@_editingTenant.Slug" disabled class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-slate-100 dark:bg-slate-600 text-slate-500 dark:text-slate-400 text-sm cursor-not-allowed" />
                    <p class="mt-1 text-xs text-slate-500">Slug cannot be changed</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Subscription Tier</label>
                    <select @bind="_editModel.SubscriptionTier" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm">
                        @if (_subscriptionTiers is not null)
                        {
                            @foreach (var tier in _subscriptionTiers)
                            {
                                <option value="@tier.Name">@tier.Name (@tier.MaxAssets assets, @tier.MaxUsers users)</option>
                            }
                        }
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Logo URL</label>
                    <input type="url" @bind="_editModel.LogoUrl" placeholder="https://example.com/logo.png" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1.5">Primary Color</label>
                    <input type="text" @bind="_editModel.PrimaryColor" placeholder="#3B82F6" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 hover:border-slate-300 dark:hover:border-slate-500 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 text-sm" />
                </div>
                <div class="flex items-center gap-3">
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" @bind="_editModel.IsActive" class="sr-only peer" />
                        <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 dark:peer-focus:ring-primary-800 rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-slate-600 peer-checked:bg-primary-600"></div>
                    </label>
                    <span class="text-sm text-slate-700 dark:text-slate-300">Active</span>
                </div>

                @if (!string.IsNullOrEmpty(_modalError))
                {
                    <div class="p-3 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800">
                        <p class="text-sm text-red-600 dark:text-red-400">@_modalError</p>
                    </div>
                }
            </div>
            <div class="flex justify-end gap-3 px-6 py-4 border-t border-slate-200 dark:border-slate-700 sticky bottom-0 bg-white dark:bg-slate-800">
                <button @onclick="CloseEditModal" class="px-4 py-2 text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-xl transition-colors">
                    Cancel
                </button>
                <Button OnClick="UpdateTenant" Loading="@_saving">
                    Save Changes
                </Button>
            </div>
        </div>
    </div>
}

<!-- Deactivate Confirmation Modal -->
@if (_showDeactivateModal && _tenantToDeactivate is not null)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center p-4">
        <div class="absolute inset-0 bg-black/50 backdrop-blur-sm" @onclick="CloseDeactivateModal"></div>
        <div class="relative w-full max-w-sm bg-white dark:bg-slate-800 rounded-2xl shadow-xl animate-scale-in">
            <div class="p-6 text-center">
                <div class="w-16 h-16 mx-auto rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-2">Deactivate Tenant?</h3>
                <p class="text-slate-500 dark:text-slate-400 mb-6">
                    Are you sure you want to deactivate <span class="font-medium text-slate-700 dark:text-slate-300">@_tenantToDeactivate.Name</span>? Users will no longer be able to access this organization.
                </p>
                <div class="flex gap-3">
                    <button @onclick="CloseDeactivateModal" class="flex-1 px-4 py-2.5 text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-xl transition-colors">
                        Cancel
                    </button>
                    <Button Variant="danger" OnClick="DeactivateTenant" Loading="@_deactivating" class="flex-1">
                        Deactivate
                    </Button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool _loading = true;
    private string _search = "";
    private string _statusFilter = "";
    private int _page = 1;
    private PagedResponse<TenantDto>? _tenants;
    private SubscriptionTierInfo[]? _subscriptionTiers;

    // Create Modal State
    private bool _showCreateModal;
    private bool _saving;
    private string? _modalError;
    private CreateTenantModel _createModel = new();

    // Edit Modal State
    private bool _showEditModal;
    private TenantDto? _editingTenant;
    private EditTenantModel _editModel = new();

    // Deactivate Modal State
    private bool _showDeactivateModal;
    private bool _deactivating;
    private TenantDto? _tenantToDeactivate;

    protected override async Task OnInitializedAsync()
    {
        await LoadSubscriptionTiers();
        await LoadTenants();
    }

    private async Task LoadSubscriptionTiers()
    {
        try
        {
            _subscriptionTiers = await Api.GetSubscriptionTiersAsync();
        }
        catch { }
    }

    private async Task LoadTenants()
    {
        _loading = true;
        try
        {
            bool? isActive = _statusFilter switch
            {
                "active" => true,
                "inactive" => false,
                _ => null
            };
            _tenants = await Api.GetTenantsAsync(_search, isActive, _page);
        }
        catch { }
        _loading = false;
    }

