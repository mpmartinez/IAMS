@page "/"
@attribute [Authorize]
@inject ApiClient Api
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Dashboard - IAMS</PageTitle>

<div class="space-y-4 sm:space-y-6">
    <!-- Header -->
    <div class="flex flex-col gap-3">
        <div>
            <h1 class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white">Dashboard</h1>
            <p class="text-sm text-slate-500 dark:text-slate-400 mt-0.5">Welcome back, @_userName</p>
        </div>
    </div>

    @if (_loading)
    {
        <!-- Loading skeleton -->
        <div class="space-y-4">
            <div class="grid grid-cols-1 gap-4">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5">
                        <div class="flex items-center gap-4">
                            <div class="w-14 h-14 rounded-2xl skeleton"></div>
                            <div class="flex-1 space-y-2">
                                <div class="h-6 w-16 rounded skeleton"></div>
                                <div class="h-4 w-24 rounded skeleton"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else if (_dashboard is not null)
    {
        <!-- Primary Stats Cards - Vertical Stack on Mobile -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <!-- Total Assets -->
            <a href="/assets" class="group">
                <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5 card-hover">
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center shadow-lg shadow-blue-500/30 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                            </svg>
                        </div>
                        <div class="flex-1">
                            <p class="text-3xl font-bold text-slate-900 dark:text-white">@_dashboard.TotalAssets</p>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Total Assets</p>
                        </div>
                        <svg class="w-5 h-5 text-slate-300 dark:text-slate-600 group-hover:text-slate-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </div>
            </a>

            <!-- Assignment Status -->
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5">
                <div class="flex items-center gap-4">
                    <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg shadow-indigo-500/30">
                        <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                    <div class="flex-1">
                        <div class="flex items-baseline gap-2">
                            <span class="text-3xl font-bold text-slate-900 dark:text-white">@_dashboard.AssignedAssets</span>
                            <span class="text-lg text-slate-400">/</span>
                            <span class="text-lg text-slate-500 dark:text-slate-400">@_dashboard.UnassignedAssets</span>
                        </div>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Assigned / Unassigned</p>
                    </div>
                </div>
                <!-- Progress bar -->
                <div class="mt-4">
                    <div class="h-2 bg-slate-100 dark:bg-slate-700 rounded-full overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-indigo-500 to-purple-500 rounded-full transition-all duration-500"
                             style="width: @(GetAssignmentPercentage())%"></div>
                    </div>
                    <p class="text-xs text-slate-400 dark:text-slate-500 mt-1.5">@GetAssignmentPercentage()% assigned</p>
                </div>
            </div>

            <!-- Total Value -->
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5">
                <div class="flex items-center gap-4">
                    <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500 to-teal-600 flex items-center justify-center shadow-lg shadow-emerald-500/30">
                        <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="flex-1">
                        <p class="text-2xl sm:text-3xl font-bold text-slate-900 dark:text-white">@FormatCurrency(_dashboard.TotalAssetValue, _dashboard.PrimaryCurrency)</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Total Asset Value</p>
                    </div>
                </div>
            </div>

            <!-- Warranty Alerts -->
            <a href="/warranty-alerts" class="group">
                <div class="bg-white dark:bg-slate-800 rounded-2xl border @GetWarrantyBorderClass() p-5 card-hover">
                    <div class="flex items-center gap-4">
                        <div class="w-14 h-14 rounded-2xl @GetWarrantyBgClass() flex items-center justify-center shadow-lg @GetWarrantyShadowClass() group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.618 5.984A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016zM12 9v2m0 4h.01" />
                            </svg>
                        </div>
                        <div class="flex-1">
                            <div class="flex items-baseline gap-2">
                                <span class="text-3xl font-bold @GetWarrantyTextClass()">@(_dashboard.WarrantiesExpiringSoon + _dashboard.WarrantiesExpired)</span>
                                @if (_dashboard.WarrantiesExpiringSoon + _dashboard.WarrantiesExpired > 0)
                                {
                                    <span class="px-2 py-0.5 text-xs font-medium rounded-full @GetWarrantyBadgeClass()">
                                        @if (_dashboard.WarrantiesExpired > 0)
                                        {
                                            <span>@_dashboard.WarrantiesExpired expired</span>
                                        }
                                        else
                                        {
                                            <span>@_dashboard.WarrantiesExpiringSoon expiring</span>
                                        }
                                    </span>
                                }
                            </div>
                            <p class="text-sm text-slate-500 dark:text-slate-400">Warranty Alerts</p>
                        </div>
                        <svg class="w-5 h-5 text-slate-300 dark:text-slate-600 group-hover:text-slate-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </div>
            </a>
        </div>

        <!-- Status Breakdown -->
        <div class="grid grid-cols-3 gap-3 sm:gap-4">
            <a href="/assets?status=Available" class="group">
                <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-4 text-center card-hover">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center mx-auto mb-2 group-hover:scale-110 transition-transform duration-200">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-emerald-600 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <p class="text-xl sm:text-2xl font-bold text-emerald-600 dark:text-emerald-400">@_dashboard.AvailableAssets</p>
                    <p class="text-xs sm:text-sm text-slate-500 dark:text-slate-400">Available</p>
                </div>
            </a>

            <a href="/assets?status=InUse" class="group">
                <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-4 text-center card-hover">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center mx-auto mb-2 group-hover:scale-110 transition-transform duration-200">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <p class="text-xl sm:text-2xl font-bold text-blue-600 dark:text-blue-400">@_dashboard.InUseAssets</p>
                    <p class="text-xs sm:text-sm text-slate-500 dark:text-slate-400">In Use</p>
                </div>
            </a>

            <a href="/assets?status=Maintenance" class="group">
                <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-4 text-center card-hover">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center mx-auto mb-2 group-hover:scale-110 transition-transform duration-200">
                        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    </div>
                    <p class="text-xl sm:text-2xl font-bold text-amber-600 dark:text-amber-400">@_dashboard.MaintenanceAssets</p>
                    <p class="text-xs sm:text-sm text-slate-500 dark:text-slate-400">Maintenance</p>
                </div>
            </a>
        </div>

        <!-- Assets by Type -->
        @if (_dashboard.AssetsByType.Any())
        {
            <Card Title="Assets by Type">
                <div class="space-y-3 -mx-6 -my-6">
                    @foreach (var type in _dashboard.AssetsByType.Take(5))
                    {
                        <a href="/assets?deviceType=@Uri.EscapeDataString(type.DeviceType)" class="flex items-center gap-4 px-6 py-4 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                            <div class="w-10 h-10 rounded-xl @GetDeviceTypeBg(type.DeviceType) flex items-center justify-center shrink-0">
                                @GetDeviceTypeIcon(type.DeviceType)
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center justify-between gap-2">
                                    <p class="font-medium text-slate-900 dark:text-white">@type.DeviceType</p>
                                    <p class="text-sm font-semibold text-slate-900 dark:text-white">@type.Count</p>
                                </div>
                                <div class="mt-1.5">
                                    <div class="h-1.5 bg-slate-100 dark:bg-slate-700 rounded-full overflow-hidden">
                                        <div class="h-full @GetDeviceTypeBarColor(type.DeviceType) rounded-full transition-all duration-500"
                                             style="width: @GetTypePercentage(type.Count)%"></div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            </Card>
        }

        <!-- Recent Assets -->
        @if (_dashboard.RecentAssets.Any())
        {
            <Card Title="Recent Assets">
                <HeaderContent>
                    <a href="/assets" class="text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400 font-medium transition-colors">
                        View all
                    </a>
                </HeaderContent>
                <ChildContent>
                    <div class="divide-y divide-slate-100 dark:divide-slate-700 -mx-6 -my-6">
                        @foreach (var asset in _dashboard.RecentAssets)
                        {
                            <a href="/assets/@asset.Id" class="flex items-center gap-4 px-6 py-4 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                                <div class="w-10 h-10 rounded-xl @GetDeviceTypeBg(asset.DeviceType) flex items-center justify-center shrink-0">
                                    @GetDeviceTypeIcon(asset.DeviceType)
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-slate-900 dark:text-white truncate">@asset.DisplayName</p>
                                    <p class="text-sm text-slate-500 dark:text-slate-400 truncate">
                                        @asset.AssetTag
                                        @if (!string.IsNullOrEmpty(asset.AssignedToUserName))
                                        {
                                            <span class="mx-1">â€¢</span>
                                            <span>@asset.AssignedToUserName</span>
                                        }
                                    </p>
                                </div>
                                <Badge Text="@asset.Status" Variant="@asset.Status" Pulse="@(asset.Status == "InUse")" />
                            </a>
                        }
                    </div>
                </ChildContent>
            </Card>
        }

        <!-- Quick Actions (Mobile) -->
        <div class="sm:hidden">
            <Card Title="Quick Actions">
                <div class="grid grid-cols-2 gap-3 -mx-2 -my-2">
                    <a href="/scan" class="flex flex-col items-center gap-2 p-4 rounded-xl bg-slate-50 dark:bg-slate-700/50 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">
                        <div class="w-10 h-10 rounded-xl bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                            <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h2M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z" />
                            </svg>
                        </div>
                        <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Scan QR</span>
                    </a>
                    <a href="/warranty-alerts" class="flex flex-col items-center gap-2 p-4 rounded-xl bg-slate-50 dark:bg-slate-700/50 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">
                        <div class="w-10 h-10 rounded-xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                            <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.618 5.984A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016zM12 9v2m0 4h.01" />
                            </svg>
                        </div>
                        <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Warranties</span>
                    </a>
                </div>
            </Card>
        </div>
    }
    else
    {
        <Card>
            <EmptyState Title="No assets yet" Description="Add your first asset to get started.">
                <AuthorizeView Roles="Admin,Staff">
                    <a href="/assets/new" class="inline-flex items-center gap-2 px-4 py-2.5 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-all duration-200">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Add Asset
                    </a>
                </AuthorizeView>
            </EmptyState>
        </Card>
    }
</div>

@code {
    private bool _loading = true;
    private string _userName = "";
    private DashboardDto? _dashboard;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        // Try to get name from various claim types
        _userName = user.FindFirst("name")?.Value
            ?? user.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value
            ?? user.FindFirst("given_name")?.Value
            ?? user.Identity?.Name?.Split('@').FirstOrDefault()
            ?? "User";

        // Get first name only
        _userName = _userName.Split(' ').FirstOrDefault() ?? "User";

        _dashboard = await Api.GetDashboardAsync();
        _loading = false;
    }

    private int GetAssignmentPercentage()
    {
        if (_dashboard is null || _dashboard.TotalAssets == 0) return 0;
        return (int)Math.Round((double)_dashboard.AssignedAssets / _dashboard.TotalAssets * 100);
    }

    private int GetTypePercentage(int count)
    {
        if (_dashboard is null || _dashboard.TotalAssets == 0) return 0;
        return (int)Math.Round((double)count / _dashboard.TotalAssets * 100);
    }

    private string FormatCurrency(decimal value, string currency)
    {
        return currency switch
        {
            "USD" => $"${value:N0}",
            "EUR" => $"\u20AC{value:N0}",
            "GBP" => $"\u00A3{value:N0}",
            "PHP" => $"\u20B1{value:N0}",
            "JPY" => $"\u00A5{value:N0}",
            _ => $"{currency} {value:N0}"
        };
    }

    private string GetWarrantyBorderClass()
    {
        if (_dashboard?.WarrantiesExpired > 0)
            return "border-red-200 dark:border-red-900/50";
        if (_dashboard?.WarrantiesExpiringSoon > 0)
            return "border-amber-200 dark:border-amber-900/50";
        return "border-slate-200 dark:border-slate-700";
    }

    private string GetWarrantyBgClass()
    {
        if (_dashboard?.WarrantiesExpired > 0)
            return "bg-gradient-to-br from-red-500 to-rose-600";
        if (_dashboard?.WarrantiesExpiringSoon > 0)
            return "bg-gradient-to-br from-amber-500 to-orange-600";
        return "bg-gradient-to-br from-slate-400 to-slate-500";
    }

    private string GetWarrantyShadowClass()
    {
        if (_dashboard?.WarrantiesExpired > 0)
            return "shadow-red-500/30";
        if (_dashboard?.WarrantiesExpiringSoon > 0)
            return "shadow-amber-500/30";
        return "shadow-slate-500/20";
    }

    private string GetWarrantyTextClass()
    {
        if (_dashboard?.WarrantiesExpired > 0)
            return "text-red-600 dark:text-red-400";
        if (_dashboard?.WarrantiesExpiringSoon > 0)
            return "text-amber-600 dark:text-amber-400";
        return "text-slate-900 dark:text-white";
    }

    private string GetWarrantyBadgeClass()
    {
        if (_dashboard?.WarrantiesExpired > 0)
            return "bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400";
        return "bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400";
    }

    private string GetDeviceTypeBg(string deviceType) => deviceType switch
    {
        "Laptop" or "Desktop" => "bg-blue-100 dark:bg-blue-900/30",
        "Monitor" => "bg-purple-100 dark:bg-purple-900/30",
        "Phone" or "Tablet" => "bg-green-100 dark:bg-green-900/30",
        "Printer" => "bg-orange-100 dark:bg-orange-900/30",
        "Network" or "Server" => "bg-red-100 dark:bg-red-900/30",
        _ => "bg-slate-100 dark:bg-slate-700"
    };

    private string GetDeviceTypeBarColor(string deviceType) => deviceType switch
    {
        "Laptop" or "Desktop" => "bg-blue-500",
        "Monitor" => "bg-purple-500",
        "Phone" or "Tablet" => "bg-green-500",
        "Printer" => "bg-orange-500",
        "Network" or "Server" => "bg-red-500",
        _ => "bg-slate-500"
    };

    private RenderFragment GetDeviceTypeIcon(string deviceType)
    {
        return deviceType switch
        {
            "Laptop" or "Desktop" => builder => { builder.AddMarkupContent(0, "<svg class=\"w-5 h-5 text-blue-600 dark:text-blue-400\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z\" /></svg>"); },
