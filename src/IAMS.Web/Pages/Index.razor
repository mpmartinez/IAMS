@page "/"
@attribute [Authorize]
@inject ApiClient Api
@inject AuthService AuthService

<PageTitle>Dashboard - IAMS</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Dashboard</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">Welcome back, @_userName</p>
        </div>
        <a href="/assets/new" class="inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-all duration-200 shadow-lg shadow-primary-500/25 btn-press">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Asset
        </a>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="stagger-item">
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5 card-hover">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                        <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">@_totalAssets</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Total Assets</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="stagger-item">
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5 card-hover">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center">
                        <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">@_availableAssets</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Available</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="stagger-item">
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5 card-hover">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-indigo-100 dark:bg-indigo-900/30 flex items-center justify-center">
                        <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">@_inUseAssets</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400">In Use</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="stagger-item">
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-5 card-hover">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                        <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">@_maintenanceAssets</p>
                        <p class="text-sm text-slate-500 dark:text-slate-400">Maintenance</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Assets -->
    <Card Title="Recent Assets">
        <HeaderContent>
            <a href="/assets" class="text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400 font-medium transition-colors">
                View all
            </a>
        </HeaderContent>
        <ChildContent>
            @if (_loading)
            {
                <div class="space-y-3">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="flex items-center gap-4 p-3">
                            <div class="w-10 h-10 rounded-lg skeleton"></div>
                            <div class="flex-1 space-y-2">
                                <div class="h-4 w-1/3 rounded skeleton"></div>
                                <div class="h-3 w-1/4 rounded skeleton"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (_recentAssets?.Any() == true)
            {
                <div class="divide-y divide-slate-100 dark:divide-slate-700 -mx-6 -my-6">
                    @foreach (var asset in _recentAssets)
                    {
                        <a href="/assets/@asset.Id" class="flex items-center gap-4 px-6 py-4 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors stagger-item">
                            <div class="w-10 h-10 rounded-lg @GetCategoryBg(asset.Category) flex items-center justify-center">
                                @GetCategoryIcon(asset.Category)
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="font-medium text-slate-900 dark:text-white truncate">@asset.Name</p>
                                <p class="text-sm text-slate-500 dark:text-slate-400">@asset.AssetTag</p>
                            </div>
                            <Badge Text="@asset.Status" Variant="@asset.Status" Pulse="@(asset.Status == "InUse")" />
                        </a>
                    }
                </div>
            }
            else
            {
                <EmptyState Title="No assets yet" Description="Add your first asset to get started.">
                    <a href="/assets/new" class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-all duration-200">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                        Add Asset
                    </a>
                </EmptyState>
            }
        </ChildContent>
    </Card>
</div>

@code {
    private bool _loading = true;
    private string _userName = "";
    private int _totalAssets;
    private int _availableAssets;
    private int _inUseAssets;
    private int _maintenanceAssets;
    private List<AssetDto>? _recentAssets;

    protected override async Task OnInitializedAsync()
    {
        var user = await AuthService.GetCurrentUserAsync();
        _userName = user?.FullName.Split(' ').FirstOrDefault() ?? "User";

        var assets = await Api.GetAssetsAsync(pageSize: 100);
        if (assets is not null)
        {
            _totalAssets = assets.TotalCount;
            _availableAssets = assets.Items.Count(a => a.Status == "Available");
            _inUseAssets = assets.Items.Count(a => a.Status == "InUse");
            _maintenanceAssets = assets.Items.Count(a => a.Status == "Maintenance");
            _recentAssets = assets.Items.Take(5).ToList();
        }

        _loading = false;
    }

    private string GetCategoryBg(string category) => category switch
    {
        "Laptop" or "Desktop" => "bg-blue-100 dark:bg-blue-900/30",
        "Monitor" => "bg-purple-100 dark:bg-purple-900/30",
        "Phone" or "Tablet" => "bg-green-100 dark:bg-green-900/30",
        "Printer" => "bg-orange-100 dark:bg-orange-900/30",
        "Network" or "Server" => "bg-red-100 dark:bg-red-900/30",
        _ => "bg-slate-100 dark:bg-slate-700"
    };

    private RenderFragment GetCategoryIcon(string category) => category switch
    {
        "Laptop" => @<svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>,
        "Desktop" => @<svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>,
        "Monitor" => @<svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>,
        "Phone" => @<svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>,
        _ => @<svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>
    };
}
