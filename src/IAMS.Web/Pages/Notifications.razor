@page "/notifications"
@inject ApiClient Api
@inject NavigationManager Navigation
@inject NotificationService NotificationSvc

<PageTitle>Notifications - IAMS</PageTitle>

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Notifications</h1>
            <p class="text-slate-500 dark:text-slate-400 mt-1">View and manage your notifications</p>
        </div>
        @if (NotificationSvc.UnreadCount > 0)
        {
            <button @onclick="MarkAllAsRead" class="btn btn-secondary">
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Mark all as read
            </button>
        }
    </div>

    <!-- Notifications List -->
    <div class="card">
        @if (_loading)
        {
            <div class="p-8 text-center">
                <div class="animate-spin w-8 h-8 border-4 border-primary-500 border-t-transparent rounded-full mx-auto"></div>
                <p class="text-slate-500 dark:text-slate-400 mt-4">Loading notifications...</p>
            </div>
        }
        else if (_notifications.Count == 0)
        {
            <div class="p-12 text-center">
                <svg class="w-16 h-16 mx-auto text-slate-300 dark:text-slate-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <h3 class="text-lg font-medium text-slate-900 dark:text-white mb-2">No notifications</h3>
                <p class="text-slate-500 dark:text-slate-400">You're all caught up! Check back later for updates.</p>
            </div>
        }
        else
        {
            <div class="divide-y divide-slate-200 dark:divide-slate-700">
                @foreach (var notification in _notifications)
                {
                    <div @key="notification.Id"
                         class="@GetNotificationClasses(notification)"
                         @onclick="() => HandleNotificationClick(notification)">
                        <div class="flex gap-4">
                            <!-- Icon -->
                            <div class="@GetIconClasses(notification.Type) w-10 h-10 rounded-full flex items-center justify-center flex-shrink-0">
                                @if (notification.Type == "Warning")
                                {
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                }
                                else if (notification.Type == "Error")
                                {
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                }
                                else if (notification.Type == "Success")
                                {
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                }
                                else
                                {
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                }
                            </div>

                            <!-- Content -->
                            <div class="flex-1 min-w-0">
                                <div class="flex items-start justify-between gap-4">
                                    <div>
                                        <p class="font-medium text-slate-900 dark:text-white">@notification.Title</p>
                                        <p class="text-slate-600 dark:text-slate-400 mt-1">@notification.Message</p>
                                    </div>
                                    @if (!notification.IsRead)
                                    {
                                        <div class="w-2.5 h-2.5 bg-primary-500 rounded-full flex-shrink-0 mt-1.5"></div>
                                    }
                                </div>
                                <div class="flex items-center gap-4 mt-2 text-sm text-slate-500 dark:text-slate-400">
                                    <span>@notification.TimeAgo</span>
                                    @if (notification.IsRead && notification.ReadAt.HasValue)
                                    {
                                        <span>Read @notification.ReadAt.Value.ToString("MMM d, h:mm tt")</span>
                                    }
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center gap-2 flex-shrink-0">
                                @if (!string.IsNullOrEmpty(notification.Link))
                                {
                                    <span class="text-xs text-primary-600 dark:text-primary-400">View</span>
                                    <svg class="w-4 h-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                }
                                <button @onclick="() => DeleteNotification(notification.Id)" @onclick:stopPropagation="true"
                                        class="p-1.5 text-slate-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded transition-colors">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<IAMS.Shared.DTOs.NotificationDto> _notifications = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadNotifications();
        NotificationSvc.OnNotificationsChanged += OnNotificationsChanged;
    }

    private async Task LoadNotifications()
    {
        _loading = true;
        try
        {
            var notifications = await Api.GetNotificationsAsync(100);
            _notifications = notifications ?? new();
        }
        catch
        {
            _notifications = new();
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnNotificationsChanged()
    {
        await LoadNotifications();
        await InvokeAsync(StateHasChanged);
    }

    private async Task HandleNotificationClick(IAMS.Shared.DTOs.NotificationDto notification)
    {
        if (!notification.IsRead)
        {
            await NotificationSvc.MarkAsReadAsync(notification.Id);
        }

        if (!string.IsNullOrEmpty(notification.Link))
        {
            Navigation.NavigateTo(notification.Link);
        }
    }

    private async Task MarkAllAsRead()
    {
        await NotificationSvc.MarkAllAsReadAsync();
        await LoadNotifications();
    }

    private async Task DeleteNotification(int id)
    {
        await Api.DeleteNotificationAsync(id);
        _notifications.RemoveAll(n => n.Id == id);
    }

    private string GetNotificationClasses(IAMS.Shared.DTOs.NotificationDto notification)
    {
        var baseClasses = "p-4 cursor-pointer transition-colors duration-200";
        if (notification.IsRead)
        {
            return $"{baseClasses} hover:bg-slate-50 dark:hover:bg-slate-700/50";
        }
        return $"{baseClasses} bg-primary-50/30 dark:bg-primary-900/10 hover:bg-primary-50/50 dark:hover:bg-primary-900/20";
    }

    private string GetIconClasses(string type)
    {
        return type switch
        {
            "Warning" => "bg-amber-100 text-amber-600 dark:bg-amber-900/30 dark:text-amber-400",
            "Error" => "bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400",
            "Success" => "bg-emerald-100 text-emerald-600 dark:bg-emerald-900/30 dark:text-emerald-400",
            _ => "bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400"
        };
    }

    public void Dispose()
    {
        NotificationSvc.OnNotificationsChanged -= OnNotificationsChanged;
    }
}
