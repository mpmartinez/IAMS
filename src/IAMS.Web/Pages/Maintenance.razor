@page "/maintenance"
@attribute [Authorize(Roles = "Admin,Staff")]
@using IAMS.Shared.DTOs
@using IAMS.Web.Components
@inject ApiClient Api
@inject NavigationManager Navigation
@inject SnackbarService Snackbar

<PageTitle>Maintenance - IAMS</PageTitle>

<div class="space-y-4 sm:space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white">Maintenance</h1>
            <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Track asset maintenance and repairs</p>
        </div>
        <button @onclick="OpenCreateModal" class="inline-flex items-center gap-2 px-4 py-2.5 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700 transition-all duration-200 text-sm">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Maintenance
        </button>
    </div>

    <!-- Summary Cards -->
    @if (_summary is not null)
    {
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-slate-100 dark:bg-slate-700 flex items-center justify-center">
                        <svg class="w-5 h-5 text-slate-600 dark:text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-slate-900 dark:text-white">@_summary.TotalCount</p>
                        <p class="text-xs text-slate-500 dark:text-slate-400">Total Records</p>
                    </div>
                </div>
            </div>
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-amber-200 dark:border-amber-900/50 p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-amber-600 dark:text-amber-400">@_summary.PendingCount</p>
                        <p class="text-xs text-slate-500 dark:text-slate-400">Pending</p>
                    </div>
                </div>
            </div>
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-blue-200 dark:border-blue-900/50 p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-blue-600 dark:text-blue-400">@_summary.InProgressCount</p>
                        <p class="text-xs text-slate-500 dark:text-slate-400">In Progress</p>
                    </div>
                </div>
            </div>
            <div class="bg-white dark:bg-slate-800 rounded-2xl border border-green-200 dark:border-green-900/50 p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-green-600 dark:text-green-400">@_summary.CompletedCount</p>
                        <p class="text-xs text-slate-500 dark:text-slate-400">Completed</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Filters -->
    <div class="flex flex-col sm:flex-row gap-3">
        <div class="relative flex-1">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="text" @bind="_search" @bind:after="LoadData" @onkeyup="OnSearchKeyUp" placeholder="Search maintenance..."
                   class="w-full pl-10 pr-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white placeholder-slate-400 transition-all duration-200 text-sm" />
        </div>
        <select @bind="_statusFilter" @bind:after="LoadData" class="px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white transition-all duration-200 text-sm">
            <option value="">All Statuses</option>
            <option value="Pending">Pending</option>
            <option value="InProgress">In Progress</option>
            <option value="Completed">Completed</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <!-- List -->
    @if (_isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <svg class="w-8 h-8 text-primary-500 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
        </div>
    }
    else if (_records is null || _records.Items.Count == 0)
    {
        <EmptyState Title="No maintenance records" Description="Create a new maintenance record to get started." />
    }
    else
    {
        <div class="bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-slate-50 dark:bg-slate-700/50">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-300 uppercase tracking-wider">Asset</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-300 uppercase tracking-wider">Title</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-300 uppercase tracking-wider">Status</th>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-slate-600 dark:text-slate-300 uppercase tracking-wider hidden sm:table-cell">Created</th>
                            <th class="px-4 py-3 text-right text-xs font-semibold text-slate-600 dark:text-slate-300 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100 dark:divide-slate-700">
                        @foreach (var record in _records.Items)
                        {
                            <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/30 transition-colors cursor-pointer" @onclick="() => OpenViewModal(record)">
                                <td class="px-4 py-3">
                                    <div class="text-sm font-medium text-slate-900 dark:text-white">@record.AssetTag</div>
                                    <div class="text-xs text-slate-500 dark:text-slate-400">@record.AssetName</div>
                                </td>
                                <td class="px-4 py-3">
                                    <div class="text-sm text-slate-900 dark:text-white">@record.Title</div>
                                    @if (record.AttachmentCount > 0)
                                    {
                                        <div class="flex items-center gap-1 text-xs text-slate-500 dark:text-slate-400 mt-0.5">
                                            <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13" />
                                            </svg>
                                            @record.AttachmentCount
                                        </div>
                                    }
                                </td>
                                <td class="px-4 py-3">
                                    <span class="@GetStatusBadgeClass(record.Status)">@record.Status</span>
                                </td>
                                <td class="px-4 py-3 hidden sm:table-cell">
                                    <div class="text-sm text-slate-500 dark:text-slate-400">@record.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</div>
                                </td>
                                <td class="px-4 py-3 text-right" @onclick:stopPropagation>
                                    <div class="flex items-center justify-end gap-1">
                                        @if (record.Status == "Pending")
                                        {
                                            <button @onclick="() => StartMaintenance(record)" title="Start" class="p-1.5 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30 text-blue-600 dark:text-blue-400 transition-colors">
                                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                            </button>
                                        }
                                        @if (record.Status is "Pending" or "InProgress")
                                        {
                                            <button @onclick="() => CompleteMaintenance(record)" title="Complete" class="p-1.5 rounded-lg hover:bg-green-100 dark:hover:bg-green-900/30 text-green-600 dark:text-green-400 transition-colors">
                                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                            </button>
                                            <button @onclick="() => CancelMaintenance(record)" title="Cancel" class="p-1.5 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/30 text-red-600 dark:text-red-400 transition-colors">
                                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @if (_records.TotalCount > _pageSize)
            {
                <div class="px-4 py-3 border-t border-slate-100 dark:border-slate-700 flex items-center justify-between">
                    <span class="text-sm text-slate-500 dark:text-slate-400">
                        Showing @((_page - 1) * _pageSize + 1) to @Math.Min(_page * _pageSize, _records.TotalCount) of @_records.TotalCount
                    </span>
                    <div class="flex gap-2">
                        <button @onclick="PreviousPage" disabled="@(_page <= 1)" class="px-3 py-1.5 text-sm rounded-lg border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 disabled:opacity-50 transition-colors">
                            Previous
                        </button>
                        <button @onclick="NextPage" disabled="@(_page * _pageSize >= _records.TotalCount)" class="px-3 py-1.5 text-sm rounded-lg border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 disabled:opacity-50 transition-colors">
                            Next
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Create Modal -->
<Modal IsOpen="@_showCreateModal" OnClose="CloseCreateModal" Title="New Maintenance">
    <div class="space-y-4">
        <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Asset</label>
            <select @bind="_createDto.AssetId" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white">
                <option value="0">Select an asset...</option>
                @if (_assets != null)
                {
                    @foreach (var asset in _assets)
                    {
                        <option value="@asset.Id">@asset.AssetTag - @asset.DisplayName</option>
                    }
                }
            </select>
        </div>
        <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Title</label>
            <input type="text" @bind="_createDto.Title" placeholder="e.g., Screen replacement" class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white placeholder-slate-400" />
        </div>
        <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Description</label>
            <textarea @bind="_createDto.Description" rows="3" placeholder="Describe the maintenance needed..." class="w-full px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white placeholder-slate-400 resize-none"></textarea>
        </div>
        @if (!string.IsNullOrEmpty(_createError))
        {
            <div class="p-3 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-sm text-red-700 dark:text-red-300">
                @_createError
            </div>
        }
        <div class="flex gap-3 pt-2">
            <button @onclick="CloseCreateModal" class="flex-1 px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-400 font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                Cancel
            </button>
            <button @onclick="CreateMaintenance" disabled="@_isCreating" class="flex-1 px-4 py-2.5 rounded-xl bg-primary-600 text-white font-medium hover:bg-primary-700 disabled:opacity-50 transition-colors">
                @(_isCreating ? "Creating..." : "Create")
            </button>
        </div>
    </div>
</Modal>

<!-- View/Edit Modal -->
<Modal IsOpen="@_showViewModal" OnClose="CloseViewModal" Title="Maintenance Details" Size="lg">
    @if (_selectedRecord != null)
    {
        <div class="space-y-6">
            <!-- Status badge and actions -->
            <div class="flex items-center justify-between">
                <span class="@GetStatusBadgeClass(_selectedRecord.Status) text-base">@_selectedRecord.Status</span>
                <div class="flex gap-2">
                    @if (_selectedRecord.Status == "Pending")
                    {
                        <button @onclick="() => StartMaintenance(_selectedRecord)" class="px-3 py-1.5 text-sm rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors">
                            Start
                        </button>
                    }
                    @if (_selectedRecord.Status is "Pending" or "InProgress")
                    {
                        <button @onclick="() => CompleteMaintenance(_selectedRecord)" class="px-3 py-1.5 text-sm rounded-lg bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 hover:bg-green-200 dark:hover:bg-green-900/50 transition-colors">
                            Complete
                        </button>
                    }
                </div>
            </div>

            <!-- Info grid -->
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <p class="text-xs text-slate-500 dark:text-slate-400">Asset</p>
                    <a href="/assets/@_selectedRecord.AssetId" class="text-sm font-medium text-primary-600 dark:text-primary-400 hover:underline">
                        @_selectedRecord.AssetTag - @_selectedRecord.AssetName
                    </a>
                </div>
                <div>
                    <p class="text-xs text-slate-500 dark:text-slate-400">Title</p>
                    <p class="text-sm font-medium text-slate-900 dark:text-white">@_selectedRecord.Title</p>
                </div>
                <div>
                    <p class="text-xs text-slate-500 dark:text-slate-400">Created By</p>
                    <p class="text-sm text-slate-900 dark:text-white">@_selectedRecord.CreatedByUserName</p>
                </div>
                <div>
                    <p class="text-xs text-slate-500 dark:text-slate-400">Created At</p>
                    <p class="text-sm text-slate-900 dark:text-white">@_selectedRecord.CreatedAt.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</p>
                </div>
                @if (_selectedRecord.StartedAt.HasValue)
                {
                    <div>
                        <p class="text-xs text-slate-500 dark:text-slate-400">Started At</p>
                        <p class="text-sm text-slate-900 dark:text-white">@_selectedRecord.StartedAt.Value.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</p>
                    </div>
                }
                @if (_selectedRecord.CompletedAt.HasValue)
                {
                    <div>
                        <p class="text-xs text-slate-500 dark:text-slate-400">Completed At</p>
                        <p class="text-sm text-slate-900 dark:text-white">@_selectedRecord.CompletedAt.Value.ToLocalTime().ToString("MMM d, yyyy h:mm tt")</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(_selectedRecord.PerformedByUserName))
                {
                    <div>
                        <p class="text-xs text-slate-500 dark:text-slate-400">Performed By</p>
                        <p class="text-sm text-slate-900 dark:text-white">@_selectedRecord.PerformedByUserName</p>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(_selectedRecord.Description))
            {
                <div>
                    <p class="text-xs text-slate-500 dark:text-slate-400 mb-1">Description</p>
                    <p class="text-sm text-slate-700 dark:text-slate-300 whitespace-pre-wrap">@_selectedRecord.Description</p>
                </div>
            }

            <!-- Work Notes -->
            <div>
                <p class="text-xs text-slate-500 dark:text-slate-400 mb-1">Work Notes</p>
                @if (_selectedRecord.IsActive)
                {
                    <textarea @bind="_editNotes" rows="4" placeholder="Document the work performed, parts replaced, issues found..."
                              class="w-full px-3 py-2 text-sm rounded-lg border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-900 dark:text-white placeholder-slate-400 resize-none"></textarea>
                    @if (_editNotes != (_selectedRecord.Notes ?? ""))
                    {
                        <div class="flex justify-end gap-2 mt-2">
                            <button @onclick="ResetNotes" class="px-3 py-1.5 text-xs rounded-lg border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                                Cancel
                            </button>
                            <button @onclick="SaveNotes" disabled="@_isSavingNotes" class="px-3 py-1.5 text-xs rounded-lg bg-primary-600 text-white hover:bg-primary-700 disabled:opacity-50 transition-colors">
                                @(_isSavingNotes ? "Saving..." : "Save Notes")
                            </button>
                        </div>
                    }
                }
                else if (!string.IsNullOrEmpty(_selectedRecord.Notes))
                {
                    <p class="text-sm text-slate-700 dark:text-slate-300 whitespace-pre-wrap bg-slate-50 dark:bg-slate-800 rounded-lg p-3">@_selectedRecord.Notes</p>
                }
                else
                {
                    <p class="text-sm text-slate-400 dark:text-slate-500 italic">No notes recorded</p>
                }
            </div>

            <!-- Attachments -->
            <div class="border-t border-slate-200 dark:border-slate-700 pt-4">
                <MaintenanceAttachments MaintenanceId="@_selectedRecord.Id" CanUpload="@_selectedRecord.IsActive" OnAttachmentsChanged="RefreshSelectedRecord" />
            </div>

            <div class="flex gap-3 pt-2 border-t border-slate-200 dark:border-slate-700">
                <button @onclick="CloseViewModal" class="flex-1 px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 text-slate-600 dark:text-slate-400 font-medium hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
                    Close
                </button>
                @if (_selectedRecord.Status is "Pending" or "InProgress")
                {
                    <button @onclick="() => DeleteMaintenance(_selectedRecord)" class="px-4 py-2.5 rounded-xl border border-red-200 dark:border-red-800 text-red-600 dark:text-red-400 font-medium hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors">
                        Delete
                    </button>
                }
            </div>
        </div>
    }
</Modal>

@code {
    private PagedResponse<MaintenanceDto>? _records;
    private MaintenanceSummaryDto? _summary;
    private List<AssetDto>? _assets;

    private bool _isLoading = true;
    private string _search = "";
    private string _statusFilter = "";
    private int _page = 1;
    private int _pageSize = 20;

    // Create modal
    private bool _showCreateModal;
    private CreateMaintenanceDto _createDto = new();
    private bool _isCreating;
    private string? _createError;

    // View modal
    private bool _showViewModal;
    private MaintenanceDto? _selectedRecord;
    private string _editNotes = "";
    private bool _isSavingNotes;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        await LoadAssets();
    }

    private async Task LoadData()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            _records = await Api.GetMaintenanceAsync(_search, _statusFilter, null, _page, _pageSize);
            _summary = await Api.GetMaintenanceSummaryAsync();
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadAssets()
    {
        var result = await Api.GetAssetsAsync(status: "Available", pageSize: 500);
        _assets = result?.Items.ToList();

        // Also include assets currently in maintenance
        var inMaint = await Api.GetAssetsAsync(status: "Maintenance", pageSize: 500);
        if (inMaint?.Items != null)
        {
            _assets ??= [];
            _assets.AddRange(inMaint.Items);
        }
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _page = 1;
            await LoadData();
        }
    }

    private async Task PreviousPage()
    {
        if (_page > 1)
        {
            _page--;
            await LoadData();
        }
    }

    private async Task NextPage()
    {
        if (_records != null && _page * _pageSize < _records.TotalCount)
        {
            _page++;
            await LoadData();
        }
    }

    private void OpenCreateModal()
    {
        _createDto = new CreateMaintenanceDto();
        _createError = null;
        _showCreateModal = true;
    }

    private void CloseCreateModal()
    {
        _showCreateModal = false;
    }

    private async Task CreateMaintenance()
    {
        if (_createDto.AssetId == 0)
        {
            _createError = "Please select an asset";
            return;
        }

        if (string.IsNullOrWhiteSpace(_createDto.Title))
        {
            _createError = "Please enter a title";
            return;
        }

        _isCreating = true;
        _createError = null;

        try
        {
            var (success, maintenance, error) = await Api.CreateMaintenanceAsync(_createDto);
            if (success)
            {
                Snackbar.Show("Maintenance record created", SnackbarType.Success);
                _showCreateModal = false;
                await LoadData();
                await LoadAssets();
            }
            else
            {
                _createError = error;
            }
        }
        finally
        {
            _isCreating = false;
        }
    }

    private void OpenViewModal(MaintenanceDto record)
    {
        _selectedRecord = record;
        _editNotes = record.Notes ?? "";
        _showViewModal = true;
    }

    private void CloseViewModal()
    {
        _showViewModal = false;
        _selectedRecord = null;
        _editNotes = "";
    }

    private void ResetNotes()
    {
        _editNotes = _selectedRecord?.Notes ?? "";
    }

    private async Task SaveNotes()
    {
        if (_selectedRecord == null) return;

        _isSavingNotes = true;
        try
        {
            var (success, error) = await Api.UpdateMaintenanceAsync(_selectedRecord.Id, new UpdateMaintenanceDto { Notes = _editNotes });
            if (success)
            {
                Snackbar.Show("Notes saved", SnackbarType.Success);
                _selectedRecord = await Api.GetMaintenanceByIdAsync(_selectedRecord.Id);
                _editNotes = _selectedRecord?.Notes ?? "";
            }
            else
            {
                Snackbar.Show(error ?? "Failed to save notes", SnackbarType.Error);
            }
        }
        finally
        {
            _isSavingNotes = false;
        }
    }

    private async Task RefreshSelectedRecord()
    {
        if (_selectedRecord != null)
        {
            _selectedRecord = await Api.GetMaintenanceByIdAsync(_selectedRecord.Id);
            await LoadData();
        }
    }

