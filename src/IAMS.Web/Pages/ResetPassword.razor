@page "/reset-password"
@layout AuthLayout
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Reset Password - IAMS</PageTitle>

@if (_success)
{
    <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center">
            <svg class="w-8 h-8 text-emerald-600 dark:text-emerald-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
        </div>
        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Password reset successful</h2>
        <p class="text-slate-500 dark:text-slate-400 mb-6">
            Your password has been reset. You can now sign in with your new password.
        </p>
        <a href="/login" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-xl bg-primary-600 text-white hover:bg-primary-700 shadow-lg shadow-primary-500/25 transition-all">
            Sign in
        </a>
    </div>
}
else if (_invalidToken)
{
    <div class="text-center">
        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center">
            <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
        </div>
        <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Invalid or expired link</h2>
        <p class="text-slate-500 dark:text-slate-400 mb-6">
            This password reset link is invalid or has expired. Please request a new one.
        </p>
        <a href="/forgot-password" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-xl bg-primary-600 text-white hover:bg-primary-700 shadow-lg shadow-primary-500/25 transition-all">
            Request new link
        </a>
    </div>
}
else
{
    <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">Reset your password</h2>
    <p class="text-slate-500 dark:text-slate-400 mb-8">Enter your new password below</p>

    <EditForm Model="@_model" OnValidSubmit="HandleSubmit" class="space-y-5">
        <Input Label="New Password" Type="password" @bind-Value="_model.Password" Placeholder="Enter new password" Error="@_passwordError" />
        <Input Label="Confirm Password" Type="password" @bind-Value="_model.ConfirmPassword" Placeholder="Confirm new password" Error="@_confirmError" />

        @if (!string.IsNullOrEmpty(_error))
        {
            <div class="p-3 rounded-xl bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 animate-slide-up">
                <p class="text-sm text-red-600 dark:text-red-400">@_error</p>
            </div>
        }

        <Button Type="submit" Size="lg" Loading="@_loading" Disabled="@_loading" class="w-full">
            @if (_loading)
            {
                <span>Resetting...</span>
            }
            else
            {
                <span>Reset password</span>
            }
        </Button>
    </EditForm>

    <div class="mt-6 text-center">
        <a href="/login" class="text-sm text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-300 transition-colors">
            <svg class="w-4 h-4 inline-block mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to login
        </a>
    </div>
}

@code {
    [SupplyParameterFromQuery] public string? Email { get; set; }
    [SupplyParameterFromQuery] public string? Token { get; set; }

    private ResetPasswordModel _model = new();
    private bool _loading;
    private bool _success;
    private bool _invalidToken;
    private string? _error;
    private string? _passwordError;
    private string? _confirmError;

    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(Email) || string.IsNullOrEmpty(Token))
        {
            _invalidToken = true;
        }
    }

    private async Task HandleSubmit()
    {
        _error = null;
        _passwordError = null;
        _confirmError = null;

        if (string.IsNullOrWhiteSpace(_model.Password))
        {
            _passwordError = "Password is required";
            return;
        }

        if (_model.Password.Length < 8)
        {
            _passwordError = "Password must be at least 8 characters";
            return;
        }

        if (_model.Password != _model.ConfirmPassword)
        {
            _confirmError = "Passwords do not match";
            return;
        }

        _loading = true;

        try
        {
            var response = await Http.PostAsJsonAsync("api/auth/reset-password", new
            {
                Email,
                Token,
                NewPassword = _model.Password
            });

            if (response.IsSuccessStatusCode)
            {
                _success = true;
            }
            else
            {
                var result = await response.Content.ReadFromJsonAsync<ApiResponse<object>>();
                _error = result?.Message ?? "Failed to reset password";

                if (response.StatusCode == System.Net.HttpStatusCode.BadRequest &&
                    (_error.Contains("token") || _error.Contains("expired")))
                {
                    _invalidToken = true;
                }
            }
        }
        catch
        {
            _error = "An error occurred. Please try again.";
        }
        finally
        {
            _loading = false;
        }
    }

    private class ResetPasswordModel
    {
        public string Password { get; set; } = "";
        public string ConfirmPassword { get; set; } = "";
    }
}

@using IAMS.Shared.DTOs
