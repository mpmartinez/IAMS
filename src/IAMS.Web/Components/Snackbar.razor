@inject SnackbarService SnackbarSvc
@implements IDisposable

<div class="fixed bottom-4 right-4 z-[100] flex flex-col gap-2 pointer-events-none">
    @foreach (var message in SnackbarSvc.Messages)
    {
        <div @key="message.Id" class="@GetContainerClasses(message.Type) pointer-events-auto animate-slide-up">
            <div class="flex items-start gap-3">
                <!-- Icon -->
                <div class="flex-shrink-0 mt-0.5">
                    @switch (message.Type)
                    {
                        case SnackbarType.Success:
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            break;
                        case SnackbarType.Error:
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            break;
                        case SnackbarType.Warning:
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            break;
                        default:
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            break;
                    }
                </div>

                <!-- Message -->
                <p class="flex-1 text-sm font-medium">@message.Message</p>

                <!-- Close button -->
                <button @onclick="() => SnackbarSvc.Remove(message.Id)"
                        class="flex-shrink-0 p-1 -m-1 rounded-lg opacity-70 hover:opacity-100 transition-opacity">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Progress bar -->
            @if (message.DurationMs > 0)
            {
                <div class="absolute bottom-0 left-0 right-0 h-1 bg-black/10 dark:bg-white/10 rounded-b-xl overflow-hidden">
                    <div class="h-full bg-current opacity-30 animate-shrink-width"
                         style="animation-duration: @(message.DurationMs)ms;"></div>
                </div>
            }
        </div>
    }
</div>

@code {
    protected override void OnInitialized()
    {
        SnackbarSvc.OnChange += StateHasChanged;
    }

    private string GetContainerClasses(SnackbarType type)
    {
        var baseClasses = "relative min-w-[300px] max-w-md px-4 py-3 rounded-xl shadow-lg border backdrop-blur-sm";

        return type switch
        {
            SnackbarType.Success => $"{baseClasses} bg-emerald-50 dark:bg-emerald-900/90 text-emerald-800 dark:text-emerald-100 border-emerald-200 dark:border-emerald-700",
            SnackbarType.Error => $"{baseClasses} bg-red-50 dark:bg-red-900/90 text-red-800 dark:text-red-100 border-red-200 dark:border-red-700",
            SnackbarType.Warning => $"{baseClasses} bg-amber-50 dark:bg-amber-900/90 text-amber-800 dark:text-amber-100 border-amber-200 dark:border-amber-700",
            _ => $"{baseClasses} bg-blue-50 dark:bg-blue-900/90 text-blue-800 dark:text-blue-100 border-blue-200 dark:border-blue-700"
        };
    }

    public void Dispose()
    {
        SnackbarSvc.OnChange -= StateHasChanged;
    }
}

@using IAMS.Web.Services
