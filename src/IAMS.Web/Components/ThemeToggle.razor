@using IAMS.Web.Services
@inject ThemeService Theme
@implements IDisposable

<button @onclick="ToggleTheme"
        class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-100 dark:hover:text-slate-300 dark:hover:bg-slate-700 transition-all duration-200"
        title="@(Theme.IsDarkMode ? "Switch to light mode" : "Switch to dark mode")">
    @if (Theme.IsDarkMode)
    {
        <!-- Sun icon (show when in dark mode to switch to light) -->
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
    }
    else
    {
        <!-- Moon icon (show when in light mode to switch to dark) -->
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
    }
</button>

@code {
    protected override void OnInitialized()
    {
        Theme.OnThemeChanged += OnThemeChanged;
    }

    private void OnThemeChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task ToggleTheme()
    {
        await Theme.ToggleThemeAsync();
    }

    public void Dispose()
    {
        Theme.OnThemeChanged -= OnThemeChanged;
    }
}
