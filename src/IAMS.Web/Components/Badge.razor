<span class="@BadgeClasses">
    @if (Pulse)
    {
        <span class="w-1.5 h-1.5 rounded-full @DotColor mr-1.5 status-pulse"></span>
    }
    @Text
</span>

@code {
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public string Variant { get; set; } = "default";
    [Parameter] public bool Pulse { get; set; }

    private string BadgeClasses => $"inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium {ColorClasses}";

    private string ColorClasses => Variant switch
    {
        "success" or "Available" => "bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400",
        "warning" or "Maintenance" => "bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400",
        "danger" or "Lost" or "Retired" => "bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400",
        "info" or "InUse" => "bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400",
        _ => "bg-slate-100 text-slate-700 dark:bg-slate-700 dark:text-slate-300"
    };

    private string DotColor => Variant switch
    {
        "success" or "Available" => "bg-emerald-500",
        "warning" or "Maintenance" => "bg-amber-500",
        "danger" or "Lost" or "Retired" => "bg-red-500",
        "info" or "InUse" => "bg-blue-500",
        _ => "bg-slate-500"
    };
}
