@using IAMS.Shared.DTOs
@using IAMS.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@inject ApiClient Api
@inject IJSRuntime JS

<div class="space-y-4">
    <div class="flex items-center justify-between">
        <h4 class="font-medium text-slate-900 dark:text-white">Attachments</h4>
        @if (CanUpload)
        {
            <div class="flex gap-2">
                <InputFile id="@_fileInputId" OnChange="OnFileSelected" accept="image/*,.pdf,.doc,.docx,.txt" class="hidden" />
                <label for="@_fileInputId"
                       class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium rounded-lg bg-primary-50 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 hover:bg-primary-100 dark:hover:bg-primary-900/50 cursor-pointer transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                    </svg>
                    Upload
                </label>
                <InputFile OnChange="OnFileSelected" AdditionalAttributes="@_cameraInputAttributes" />
                <label for="@_cameraInputId"
                       class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium rounded-lg bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 hover:bg-slate-200 dark:hover:bg-slate-600 cursor-pointer transition-colors">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Camera
                </label>
            </div>
        }
    </div>

    <!-- Upload progress -->
    @if (_isUploading)
    {
        <div class="flex items-center gap-3 p-3 rounded-lg bg-primary-50 dark:bg-primary-900/20 border border-primary-200 dark:border-primary-800">
            <svg class="w-5 h-5 text-primary-500 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span class="text-sm text-primary-700 dark:text-primary-300">Uploading...</span>
        </div>
    }

    <!-- Upload error -->
    @if (!string.IsNullOrEmpty(_uploadError))
    {
        <div class="flex items-center gap-2 p-3 rounded-lg bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800">
            <svg class="w-5 h-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm text-red-700 dark:text-red-300">@_uploadError</span>
            <button @onclick="ClearError" class="ml-auto text-red-400 hover:text-red-600">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
    }

    <!-- Category selector (shown when file is selected) -->
    @if (_pendingFile != null)
    {
        <div class="p-4 rounded-lg bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 space-y-3">
            <div class="flex items-center gap-3">
                @if (_pendingFilePreview != null)
                {
                    <img src="@_pendingFilePreview" alt="Preview" class="w-12 h-12 object-cover rounded" />
                }
                else
                {
                    <div class="w-12 h-12 rounded bg-slate-200 dark:bg-slate-600 flex items-center justify-center">
                        <svg class="w-6 h-6 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                        </svg>
                    </div>
                }
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-slate-900 dark:text-white truncate">@_pendingFile.Name</p>
                    <p class="text-xs text-slate-500 dark:text-slate-400">@FormatFileSize(_pendingFile.Size)</p>
                </div>
                <button @onclick="CancelUpload" class="p-1 text-slate-400 hover:text-slate-600">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div>
                <label class="block text-xs font-medium text-slate-600 dark:text-slate-400 mb-1">Category</label>
                <select @bind="_selectedCategory" class="w-full px-3 py-2 text-sm rounded-lg border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-900 dark:text-white">
                    <option value="BeforePhoto">Before Photo</option>
                    <option value="AfterPhoto">After Photo</option>
                    <option value="Receipt">Receipt</option>
                    <option value="Document">Document</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <button @onclick="UploadFile" disabled="@_isUploading"
                    class="w-full px-4 py-2 text-sm font-medium rounded-lg bg-primary-600 text-white hover:bg-primary-700 disabled:opacity-50 transition-colors">
                Upload
            </button>
        </div>
    }

    <!-- Attachments list -->
    @if (_attachments is null)
    {
        <div class="flex items-center justify-center py-8">
            <svg class="w-6 h-6 text-slate-400 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
        </div>
    }
    else if (_attachments.Count == 0)
    {
        <div class="text-center py-8">
            <svg class="w-12 h-12 mx-auto text-slate-300 dark:text-slate-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <p class="mt-2 text-sm text-slate-500 dark:text-slate-400">No attachments yet</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
            @foreach (var attachment in _attachments)
            {
                <div class="relative group rounded-lg overflow-hidden border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-800">
                    @if (attachment.IsImage)
                    {
                        <div class="aspect-square cursor-pointer" @onclick="() => OpenPreview(attachment)">
                            @if (_imageCache.TryGetValue(attachment.Id, out var base64))
                            {
                                <img src="@base64" alt="@attachment.FileName" class="w-full h-full object-cover" />
                            }
                            else
                            {
                                <div class="w-full h-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center">
                                    <svg class="w-8 h-8 text-slate-400 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="aspect-square flex flex-col items-center justify-center bg-slate-50 dark:bg-slate-700 cursor-pointer" @onclick="() => DownloadFile(attachment)">
                            <svg class="w-10 h-10 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                            <span class="mt-1 text-xs text-slate-500 uppercase">@GetFileExtension(attachment.FileName)</span>
                        </div>
                    }

                    <div class="p-2">
                        <p class="text-xs font-medium text-slate-900 dark:text-white truncate" title="@attachment.FileName">@attachment.FileName</p>
                        <p class="text-xs text-slate-500">@GetCategoryLabel(attachment.Category)</p>
                    </div>

                    @if (CanUpload)
                    {
                        <button @onclick="() => DeleteAttachment(attachment)"
                                class="absolute top-1 right-1 p-1.5 rounded-full bg-red-500/80 text-white opacity-0 group-hover:opacity-100 hover:bg-red-600 transition-all">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    }
                </div>
            }
        </div>
    }

    <!-- Image preview modal -->
    @if (_previewAttachment != null && _imageCache.TryGetValue(_previewAttachment.Id, out var previewBase64))
    {
        <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/80" @onclick="ClosePreview">
            <button @onclick="ClosePreview" class="absolute top-4 right-4 p-2 rounded-full bg-white/10 text-white hover:bg-white/20">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            <img src="@previewBase64" alt="@_previewAttachment.FileName" class="max-w-full max-h-[90vh] object-contain rounded-lg" @onclick:stopPropagation />
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired] public int MaintenanceId { get; set; }
    [Parameter] public bool CanUpload { get; set; } = true;
    [Parameter] public EventCallback OnAttachmentsChanged { get; set; }

    private List<MaintenanceAttachmentDto>? _attachments;
    private Dictionary<int, string> _imageCache = new();
    private MaintenanceAttachmentDto? _previewAttachment;

    private string _fileInputId = $"maint-file-{Guid.NewGuid():N}";
    private string _cameraInputId = $"maint-camera-{Guid.NewGuid():N}";
    private Dictionary<string, object> _cameraInputAttributes => new()
    {
        { "id", _cameraInputId },
        { "accept", "image/*" },
        { "capture", "environment" },
        { "class", "hidden" }
    };
    private IBrowserFile? _pendingFile;
    private string? _pendingFilePreview;
    private string _selectedCategory = "BeforePhoto";
    private bool _isUploading;
    private string? _uploadError;

    protected override async Task OnInitializedAsync()
    {
        await LoadAttachments();
    }

    protected override async Task OnParametersSetAsync()
    {
        // Reload if MaintenanceId changes
        await LoadAttachments();
    }

    private async Task LoadAttachments()
    {
        if (MaintenanceId <= 0) return;

        _attachments = await Api.GetMaintenanceAttachmentsAsync(MaintenanceId);
        _attachments ??= new List<MaintenanceAttachmentDto>();

        // Load image previews
        foreach (var attachment in _attachments.Where(a => a.IsImage))
        {
            if (!_imageCache.ContainsKey(attachment.Id))
            {
                var base64 = await Api.GetMaintenanceAttachmentBase64Async(MaintenanceId, attachment.Id, attachment.ContentType);
                if (base64 != null)
                {
                    _imageCache[attachment.Id] = base64;
                    StateHasChanged();
                }
            }
        }
    }

    private async Task OnFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file == null) return;

        // Validate size
        if (file.Size > 5 * 1024 * 1024)
        {
            _uploadError = "File size exceeds 5 MB limit";
            return;
        }

        _pendingFile = file;
        _uploadError = null;

        // Generate preview for images
        if (file.ContentType.StartsWith("image/"))
        {
            try
            {
                var resizedImage = await file.RequestImageFileAsync(file.ContentType, 200, 200);
                using var stream = resizedImage.OpenReadStream(5 * 1024 * 1024);
                using var ms = new MemoryStream();
                await stream.CopyToAsync(ms);
                _pendingFilePreview = $"data:{file.ContentType};base64,{Convert.ToBase64String(ms.ToArray())}";
            }
            catch
            {
                _pendingFilePreview = null;
            }
        }
        else
        {
            _pendingFilePreview = null;
        }

        StateHasChanged();
    }

    private async Task UploadFile()
    {
        if (_pendingFile == null) return;

        _isUploading = true;
        _uploadError = null;
        StateHasChanged();

        try
        {
            using var stream = _pendingFile.OpenReadStream(5 * 1024 * 1024);
            var (success, attachment, error) = await Api.UploadMaintenanceAttachmentAsync(
                MaintenanceId,
                stream,
                _pendingFile.Name,
                _pendingFile.ContentType,
                _selectedCategory);

            if (success)
            {
                _pendingFile = null;
                _pendingFilePreview = null;
                await LoadAttachments();
                await OnAttachmentsChanged.InvokeAsync();
            }
            else
            {
                _uploadError = error ?? "Upload failed";
            }
        }
        catch (Exception ex)
        {
            _uploadError = ex.Message;
        }
        finally
        {
            _isUploading = false;
            StateHasChanged();
        }
    }

    private void CancelUpload()
    {
        _pendingFile = null;
        _pendingFilePreview = null;
        _uploadError = null;
    }

    private void ClearError()
    {
        _uploadError = null;
    }

    private async Task DeleteAttachment(MaintenanceAttachmentDto attachment)
    {
        if (await JS.InvokeAsync<bool>("confirm", $"Delete {attachment.FileName}?"))
        {
            var success = await Api.DeleteMaintenanceAttachmentAsync(MaintenanceId, attachment.Id);
            if (success)
            {
                _imageCache.Remove(attachment.Id);
                await LoadAttachments();
                await OnAttachmentsChanged.InvokeAsync();
            }
        }
    }

    private void OpenPreview(MaintenanceAttachmentDto attachment)
    {
        _previewAttachment = attachment;
    }

    private void ClosePreview()
    {
        _previewAttachment = null;
    }

    private async Task DownloadFile(MaintenanceAttachmentDto attachment)
    {
        var url = Api.GetMaintenanceAttachmentDownloadUrl(MaintenanceId, attachment.Id);
        await JS.InvokeVoidAsync("open", url, "_blank");
    }

    private static string GetCategoryLabel(string category) => category switch
    {
        "BeforePhoto" => "Before",
        "AfterPhoto" => "After",
        _ => category
    };

    private static string GetFileExtension(string fileName)
    {
        var ext = Path.GetExtension(fileName);
        return string.IsNullOrEmpty(ext) ? "FILE" : ext.TrimStart('.');
    }

    private static string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F2} MB";
    }
}
