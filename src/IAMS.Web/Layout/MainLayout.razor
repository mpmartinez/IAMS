@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IConfiguration Configuration
@inject ApiClient Api
@inject NetworkStatusService NetworkStatus
@inject SyncService Sync
@inject NotificationService Notifications
@inject IJSRuntime JS
@implements IAsyncDisposable

<div class="flex h-screen overflow-hidden bg-slate-100 dark:bg-slate-900">
    <AuthorizeView>
        <Authorized Context="sidebarAuth">
            <!-- Mobile menu overlay -->
            @if (_mobileMenuOpen)
            {
                <div class="fixed inset-0 z-40 lg:hidden menu-overlay animate-fade-in" @onclick="CloseMobileMenu"></div>
            }

            <!-- Sidebar -->
            <aside class="@SidebarClasses">
        <div class="flex flex-col h-full">
            <!-- Logo -->
            <div class="flex items-center gap-3 px-6 h-16 border-b border-slate-200 dark:border-slate-700">
                <span class="font-bold text-2xl"><span class="text-primary-600 dark:text-primary-400">IA</span><span class="text-slate-900 dark:text-white">MS</span></span>
                <button class="lg:hidden ml-auto p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" @onclick="CloseMobileMenu">
                    <svg class="w-5 h-5 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-3 py-4 space-y-1 overflow-y-auto">
                <NavItem Href="/" Icon="home" Label="Dashboard" OnNavigation="CloseMobileMenu" />
                <NavItem Href="/assets" Icon="cube" Label="Assets" OnNavigation="CloseMobileMenu" />
                <NavItem Href="/scan" Icon="qr-scan" Label="Scan QR" OnNavigation="CloseMobileMenu" />
                <NavItem Href="/warranty-alerts" Icon="shield-exclamation" Label="Warranty Alerts" BadgeCount="@_alertCount" OnNavigation="CloseMobileMenu" />
                <NavItem Href="/notifications" Icon="bell" Label="Notifications" BadgeCount="@Notifications.UnreadCount" OnNavigation="CloseMobileMenu" />
                <NavItem Href="/categories" Icon="tag" Label="Categories" OnNavigation="CloseMobileMenu" />

                <AuthorizeView Roles="Admin">
                    <div class="pt-4 mt-4 border-t border-slate-200 dark:border-slate-700">
                        <p class="px-3 mb-2 text-xs font-medium text-slate-400 uppercase tracking-wider">Admin</p>
                        <NavItem Href="/users" Icon="users" Label="Users" OnNavigation="CloseMobileMenu" />
                    </div>
                </AuthorizeView>

                <AuthorizeView Roles="SuperAdmin">
                    <div class="pt-4 mt-4 border-t border-slate-200 dark:border-slate-700">
                        <p class="px-3 mb-2 text-xs font-medium text-slate-400 uppercase tracking-wider">Platform</p>
                        <NavItem Href="/admin/tenants" Icon="building" Label="Tenants" OnNavigation="CloseMobileMenu" />
                    </div>
                </AuthorizeView>

                <PermissionView Permission="iams:reports:view">
                    <div class="pt-4 mt-4 border-t border-slate-200 dark:border-slate-700">
                        <p class="px-3 mb-2 text-xs font-medium text-slate-400 uppercase tracking-wider">Reports</p>
                        <NavItem Href="/reports" Icon="chart" Label="Asset Reports" OnNavigation="CloseMobileMenu" />
                    </div>
                </PermissionView>
            </nav>

            <!-- User menu -->
            <div class="p-3 border-t border-slate-200 dark:border-slate-700">
                <AuthorizeView>
                    <Authorized Context="userContext">
                        <div class="flex items-center gap-3 px-3 py-2 rounded-xl bg-slate-50 dark:bg-slate-800/50">
                            <div class="w-9 h-9 rounded-full bg-gradient-to-br from-slate-400 to-slate-500 flex items-center justify-center text-white text-sm font-medium">
                                @userContext.User.Identity?.Name?.FirstOrDefault()
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-slate-900 dark:text-white truncate">@userContext.User.Identity?.Name</p>
                                <p class="text-xs text-slate-500 truncate">
                                    @{
                                        var role = userContext.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Staff";
                                        var roleBadgeClass = role switch
                                        {
                                            "Admin" => "bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400",
                                            "Auditor" => "bg-teal-100 text-teal-700 dark:bg-teal-900/30 dark:text-teal-400",
                                            _ => "bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400"
                                        };
                                    }
                                    <span class="inline-flex px-1.5 py-0.5 rounded text-[10px] font-medium @roleBadgeClass">@role</span>
                                </p>
                            </div>
                            <button @onclick="OpenChangePassword" title="Change Password" class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-200 dark:hover:bg-slate-700 dark:hover:text-slate-300 transition-all duration-200">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                                </svg>
                            </button>
                            <button @onclick="Logout" title="Logout" class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-200 dark:hover:bg-slate-700 dark:hover:text-slate-300 transition-all duration-200">
                                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                </svg>
                            </button>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </aside>
        </Authorized>
    </AuthorizeView>

    <!-- Main content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <AuthorizeView>
            <Authorized Context="headerAuth">
                <!-- Top bar -->
                <header class="flex items-center gap-4 px-4 lg:px-6 h-16 bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 shadow-sm">
            <button class="lg:hidden p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors" @onclick="OpenMobileMenu">
                <svg class="w-6 h-6 text-slate-600 dark:text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>

            <!-- Organization Name -->
            <AuthorizeView>
                <Authorized>
                    @{
                        var tenantName = context.User.FindFirst("tenant_name")?.Value;
                    }
                    @if (!string.IsNullOrEmpty(tenantName))
                    {
                        <div class="hidden sm:flex items-center gap-2 px-3 py-1.5 rounded-lg bg-slate-100 dark:bg-slate-700/50">
                            <svg class="w-4 h-4 text-slate-500 dark:text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            <span class="text-sm font-medium text-slate-700 dark:text-slate-300">@tenantName</span>
                        </div>
                    }
                </Authorized>
            </AuthorizeView>

            <div class="flex-1"></div>

            <!-- Sync Status Indicator -->
            @if (_syncStatus is not null)
            {
                <button @onclick="TriggerSync" disabled="@_syncStatus.IsSyncing" class="@GetSyncButtonClasses()" title="@GetSyncTooltip()">
                    @if (_syncStatus.IsSyncing)
                    {
                        <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                    }
                    else if (!_syncStatus.IsOnline)
                    {
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3m8.293 8.293l1.414 1.414" />
                        </svg>
                    }
                    else if (_syncStatus.PendingActionCount > 0)
                    {
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                        </svg>
                    }
                    else
                    {
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    }
                    @if (_syncStatus.PendingActionCount > 0)
                    {
                        <span class="text-xs font-medium">@_syncStatus.PendingActionCount</span>
                    }
                </button>
            }

            <!-- Quick actions -->
            <div class="relative">
                <button @onclick="ToggleSearch" class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-100 dark:hover:text-slate-300 dark:hover:bg-slate-700 transition-all duration-200">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>

                <!-- Search Dropdown -->
                @if (_showSearch)
                {
                    <div class="fixed inset-0 z-40" @onclick="CloseSearch"></div>
                    <div class="absolute right-0 mt-2 w-80 sm:w-96 bg-white dark:bg-slate-800 rounded-xl shadow-xl border border-slate-200 dark:border-slate-700 z-50 animate-slide-down overflow-hidden">
                        <div class="p-3 border-b border-slate-200 dark:border-slate-700">
                            <div class="relative">
                                <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                                <input @ref="_searchInput"
                                       @bind="_searchQuery"
                                       @bind:event="oninput"
                                       @onkeyup="HandleSearchKeyUp"
                                       type="text"
                                       placeholder="Search assets..."
                                       class="w-full pl-10 pr-4 py-2.5 rounded-lg bg-slate-100 dark:bg-slate-700 border-0 text-slate-900 dark:text-white placeholder-slate-400 focus:ring-2 focus:ring-primary-500 transition-all" />
                                @if (_searchLoading)
                                {
                                    <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400 animate-spin" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                }
                            </div>
                        </div>

                        <div class="max-h-80 overflow-y-auto">
                            @if (_searchResults.Any())
                            {
                                @foreach (var asset in _searchResults)
                                {
                                    <a href="/assets/@asset.Id" @onclick="CloseSearch" class="flex items-center gap-3 px-4 py-3 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                                        <div class="w-10 h-10 rounded-xl @GetDeviceTypeBg(asset.DeviceType) flex items-center justify-center shrink-0">
                                            @GetDeviceTypeIcon(asset.DeviceType)
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <p class="font-medium text-slate-900 dark:text-white truncate">@asset.DisplayName</p>
                                            <p class="text-sm text-slate-500 dark:text-slate-400 truncate">
                                                @asset.AssetTag
                                                @if (!string.IsNullOrEmpty(asset.SerialNumber))
                                                {
                                                    <span class="mx-1">â€¢</span>
                                                    <span>@asset.SerialNumber</span>
                                                }
                                            </p>
                                        </div>
                                        <span class="@GetStatusBadgeClass(asset.Status) px-2 py-0.5 text-xs font-medium rounded-full">@asset.Status</span>
                                    </a>
                                }
                            }
                            else if (!string.IsNullOrWhiteSpace(_searchQuery) && !_searchLoading)
                            {
                                <div class="py-8 text-center">
                                    <svg class="w-12 h-12 mx-auto text-slate-300 dark:text-slate-600 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                    </svg>
                                    <p class="text-sm text-slate-500 dark:text-slate-400">No assets found</p>
                                </div>
                            }
                            else if (!_searchLoading)
                            {
                                <div class="py-6 text-center">
                                    <p class="text-sm text-slate-500 dark:text-slate-400">Type to search for assets</p>
                                    <p class="text-xs text-slate-400 dark:text-slate-500 mt-1">Search by name, tag, or serial number</p>
                                </div>
                            }
                        </div>

                        <!-- View All Link -->
                        @if (_searchResults.Any())
                        {
                            <div class="border-t border-slate-200 dark:border-slate-700">
                                <a href="/assets?search=@Uri.EscapeDataString(_searchQuery)" @onclick="CloseSearch" class="block px-4 py-3 text-center text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                                    View all results
                                </a>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Notifications -->
            <div class="relative">
                <button @onclick="ToggleNotifications" class="p-2 rounded-lg text-slate-400 hover:text-slate-600 hover:bg-slate-100 dark:hover:text-slate-300 dark:hover:bg-slate-700 transition-all duration-200 relative">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>
                    @if (Notifications.UnreadCount > 0)
                    {
                        <span class="absolute -top-0.5 -right-0.5 w-5 h-5 bg-red-500 text-white text-[10px] font-bold rounded-full flex items-center justify-center">
                            @(Notifications.UnreadCount > 9 ? "9+" : Notifications.UnreadCount.ToString())
                        </span>
                    }
                </button>

                <!-- Notification Dropdown -->
                @if (_showNotifications)
                {
                    <div class="fixed inset-0 z-40" @onclick="CloseNotifications"></div>
                    <div class="absolute right-0 mt-2 w-80 sm:w-96 bg-white dark:bg-slate-800 rounded-xl shadow-xl border border-slate-200 dark:border-slate-700 z-50 animate-slide-down overflow-hidden">
                        <!-- Header -->
                        <div class="flex items-center justify-between px-4 py-3 border-b border-slate-200 dark:border-slate-700">
                            <h3 class="font-semibold text-slate-900 dark:text-white">Notifications</h3>
                            <div class="flex items-center gap-2">
                                @if (Notifications.UnreadCount > 0)
                                {
                                    <button @onclick="MarkAllAsRead" class="text-xs text-primary-600 hover:text-primary-700 dark:text-primary-400 font-medium">
                                        Mark all read
                                    </button>
                                }
                                @if (!Notifications.IsConnected)
                                {
                                    <span class="w-2 h-2 bg-amber-500 rounded-full" title="Reconnecting..."></span>
                                }
                            </div>
                        </div>

                        <!-- Notifications List -->
                        <div class="max-h-96 overflow-y-auto">
                            @if (Notifications.Notifications.Count == 0)
                            {
                                <div class="py-12 text-center">
                                    <svg class="w-12 h-12 mx-auto text-slate-300 dark:text-slate-600 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                                    </svg>
                                    <p class="text-sm text-slate-500 dark:text-slate-400">No notifications yet</p>
                                </div>
                            }
                            else
                            {
                                @foreach (var notification in Notifications.Notifications)
                                {
                                    <div @key="notification.Id"
                                         class="@GetNotificationItemClasses(notification)"
                                         @onclick="() => HandleNotificationClick(notification)">
                                        <div class="flex gap-3">
                                            <div class="@GetNotificationIconClasses(notification.Type) w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                                                @if (notification.Type == "Warning")
                                                {
                                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                                    </svg>
                                                }
                                                else if (notification.Type == "Error")
                                                {
                                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                }
                                                else if (notification.Type == "Success")
                                                {
                                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                }
                                                else
                                                {
                                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                }
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-sm font-medium text-slate-900 dark:text-white">@notification.Title</p>
                                                <p class="text-sm text-slate-600 dark:text-slate-400 line-clamp-2">@notification.Message</p>
                                                <p class="text-xs text-slate-400 dark:text-slate-500 mt-1">@notification.TimeAgo</p>
                                            </div>
                                            @if (!notification.IsRead)
                                            {
                                                <div class="w-2 h-2 bg-primary-500 rounded-full flex-shrink-0 mt-2"></div>
                                            }
                                        </div>
                                    </div>
                                }
                            }
                        </div>

                        <!-- View All Link -->
                        <div class="border-t border-slate-200 dark:border-slate-700">
                            <a href="/notifications" @onclick="CloseNotifications" class="block px-4 py-3 text-center text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                                View all notifications
                            </a>
                        </div>
                    </div>
                }
            </div>
        </header>
            </Authorized>
        </AuthorizeView>

        <!-- Page content -->
        <main class="flex-1 overflow-y-auto p-4 lg:p-6 pb-24 lg:pb-6">
            <div class="animate-fade-in">
                @Body
            </div>
        </main>
    </div>

    <!-- Mobile Bottom Navigation -->
    <AuthorizeView>
        <Authorized>
            <nav class="lg:hidden fixed bottom-0 left-0 right-0 z-40 bg-white dark:bg-slate-800 border-t border-slate-200 dark:border-slate-700 pb-safe">
                <div class="flex items-center justify-around h-16">
                    <!-- Dashboard -->
                    <a href="/" class="@GetFooterNavClass("/", true)">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span class="text-xs mt-1">Home</span>
                    </a>

                    <!-- Assets -->
                    <a href="/assets" class="@GetFooterNavClass("/assets")">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                        </svg>
                        <span class="text-xs mt-1">Assets</span>
                    </a>

                    <!-- Scan (Primary/Center) -->
                    <a href="/scan" class="flex flex-col items-center justify-center -mt-5">
                        <div class="w-14 h-14 bg-primary-600 text-white rounded-full flex items-center justify-center shadow-lg shadow-primary-500/30">
                            <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
