    {
        var m2idAuthority = Configuration["m2ID:Authority"];
        if (!string.IsNullOrEmpty(m2idAuthority))
        {
            // Use NavigateToLogout extension method for proper OIDC logout
            Navigation.NavigateToLogout("authentication/logout");
        }
        else
        {
            Navigation.NavigateTo("/login", forceLoad: true);
        }
    }

    private async Task TriggerSync()
    {
        if (_syncStatus?.IsOnline == true && !_syncStatus.IsSyncing)
        {
            await Sync.SyncAsync();
        }
    }

    private string GetSyncButtonClasses()
    {
        var baseClasses = "flex items-center gap-1.5 px-2.5 py-1.5 rounded-lg text-xs font-medium transition-all duration-200";

        if (_syncStatus?.IsSyncing == true)
        {
            return $"{baseClasses} bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400";
        }
        if (_syncStatus?.IsOnline == false)
        {
            return $"{baseClasses} bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400";
        }
        if (_syncStatus?.PendingActionCount > 0)
        {
            return $"{baseClasses} bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-400 hover:bg-primary-200 dark:hover:bg-primary-900/50 cursor-pointer";
        }
        return $"{baseClasses} bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400";
    }

    private string GetSyncTooltip()
    {
        if (_syncStatus is null) return "";

        if (_syncStatus.IsSyncing) return "Syncing...";
        if (!_syncStatus.IsOnline) return "Offline - changes will sync when back online";
        if (_syncStatus.PendingActionCount > 0) return $"{_syncStatus.PendingActionCount} pending changes - click to sync";

        var lastSync = _syncStatus.LastSyncTime?.ToString("g") ?? "Never";
        return $"All synced. Last sync: {lastSync}";
    }

    public async ValueTask DisposeAsync()
    {
        Sync.OnSyncStatusChanged -= OnSyncStatusChangedAsync;
        Notifications.OnNotificationsChanged -= OnNotificationsChangedAsync;
        _searchCts?.Cancel();
        _searchCts?.Dispose();
        await Notifications.DisposeAsync();
    }
