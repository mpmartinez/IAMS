@code {
    private bool _mobileMenuOpen;
    private int _alertCount;
    private bool _showChangePassword;
    private SyncStatus? _syncStatus;
    private bool _showNotifications;
    private bool _showSearch;
    private string _searchQuery = "";
    private bool _searchLoading;
    private List<IAMS.Shared.DTOs.AssetDto> _searchResults = new();
    private ElementReference _searchInput;
    private CancellationTokenSource? _searchCts;

    private string SidebarClasses => _mobileMenuOpen
        ? "fixed inset-y-0 left-0 z-50 w-64 bg-white dark:bg-slate-800 shadow-xl sidebar-transition lg:relative lg:shadow-none"
        : "fixed inset-y-0 left-0 z-50 w-64 bg-white dark:bg-slate-800 shadow-xl sidebar-transition -translate-x-full lg:translate-x-0 lg:relative lg:shadow-none";

    protected override async Task OnInitializedAsync()
    {
        await LoadAlertCount();

        // Initialize sync services
        try
        {
            await Sync.InitializeAsync();
            Sync.OnSyncStatusChanged += OnSyncStatusChangedAsync;
            _syncStatus = Sync.Status;
        }
        catch
        {
            // Offline services may fail in some browsers
        }

        // Initialize notification service
        try
        {
            Notifications.OnNotificationsChanged += OnNotificationsChangedAsync;
            await Notifications.InitializeAsync();
        }
        catch
        {
            // Silently fail if not authenticated
        }
    }

    private async Task OnSyncStatusChangedAsync(SyncStatus status)
    {
        _syncStatus = status;
        await InvokeAsync(StateHasChanged);
    }

    private async Task OnNotificationsChangedAsync()
    {
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadAlertCount()
    {
        try
        {
            _alertCount = await Api.GetUnacknowledgedWarrantyAlertCountAsync();
        }
        catch
        {
            // Silently fail if not authenticated or API unavailable
            _alertCount = 0;
        }
    }

    private void OpenMobileMenu() => _mobileMenuOpen = true;
    private void CloseMobileMenu() => _mobileMenuOpen = false;

    private string GetFooterNavClass(string href, bool exact = false)
    {
        var isActive = exact
            ? Navigation.Uri.EndsWith(href)
            : Navigation.Uri.Contains(href);

        return isActive
            ? "flex flex-col items-center justify-center text-primary-600 dark:text-primary-400"
            : "flex flex-col items-center justify-center text-slate-400 hover:text-slate-600 dark:hover:text-slate-300";
    }
    private void OpenChangePassword() => _showChangePassword = true;

    private void ToggleNotifications()
    {
        _showNotifications = !_showNotifications;
        _showSearch = false;
    }

    private void CloseNotifications() => _showNotifications = false;

    private async Task ToggleSearch()
    {
        _showSearch = !_showSearch;
        _showNotifications = false;
        if (_showSearch)
        {
            _searchQuery = "";
            _searchResults.Clear();
            await Task.Delay(50);
            await _searchInput.FocusAsync();
        }
    }

    private void CloseSearch()
    {
        _showSearch = false;
        _searchQuery = "";
        _searchResults.Clear();
    }

    private async Task HandleSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Escape")
        {
            CloseSearch();
            return;
        }

        // Debounce search
        _searchCts?.Cancel();
        _searchCts = new CancellationTokenSource();

        try
        {
            await Task.Delay(300, _searchCts.Token);
            await PerformSearch();
        }
        catch (TaskCanceledException)
        {
            // Search was cancelled, ignore
        }
    }

    private async Task PerformSearch()
    {
        if (string.IsNullOrWhiteSpace(_searchQuery) || _searchQuery.Length < 2)
        {
            _searchResults.Clear();
            return;
        }

        _searchLoading = true;
        StateHasChanged();

        try
        {
            var result = await Api.GetAssetsAsync(search: _searchQuery, page: 1, pageSize: 10);
            _searchResults = result?.Items ?? new();
        }
        catch
        {
            _searchResults.Clear();
        }
        finally
        {
            _searchLoading = false;
        }
    }

